---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Workshops";
const description =
    "Master the craft of digital creation through focused, mentorship-style workshops.";

const workshops = [
    {
        title: "Obsidian Basics: Building Your Second Brain",
        description:
            "Stop losing your best ideas. Learn how to build a resilient personal knowledge management system that improves your note-taking, thinking, and creative output.",
        price: "£99",
        duration: "3 Hours",
        features: [
            "Setting up your first Vault",
            "Linking your thinking (Bidirectional links)",
            "Tagging strategies vs. Folders",
            "CORE Framework for creative output",
        ],
        highlight: false,
    },
    {
        title: "The Psychology of Video Editing",
        description:
            "Go beyond software tutorials. Master the nuances of timing, rhythm, color grading, and sound design to create emotionally resonant visual stories.",
        price: "£399",
        duration: "2 Days (4 hrs/day)",
        features: [
            "Psychology of the cut",
            "Rhythm & Pacing masterclass",
            "Color Grading for emotion",
            "Sound Design & Mixing",
            "Practice sessions & Demo resources included",
        ],
        highlight: true,
    },
];
---

<BaseLayout title={pageTitle}>
    <div class="workshops-page">
        <header class="page-header">
            <span class="eyebrow">Education</span>
            <h1>{pageTitle}</h1>
            <p class="subtitle">{description}</p>
        </header>

        <div class="workshops-grid">
            {
                workshops.map((workshop) => (
                    <div
                        class={`workshop-card ${workshop.highlight ? "highlight" : ""}`}
                    >
                        <div class="card-header">
                            <h3>{workshop.title}</h3>
                            <p class="description">{workshop.description}</p>
                        </div>

                        <div class="card-details">
                            <div class="meta-row">
                                <span class="price">{workshop.price}</span>
                                <span class="duration-badge">
                                    {workshop.duration}
                                </span>
                            </div>

                            <ul class="features-list">
                                {workshop.features.map((feature) => (
                                    <li>
                                        <span class="check">✓</span> {feature}
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <div class="card-footer">
                            <a
                                href="mailto:hello@abodid.com?subject=Workshop Inquiry"
                                class="book-btn"
                            >
                                Book a Slot
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</BaseLayout>

<style>
    .workshops-page {
        max-width: 1000px;
        margin: 0 auto;
        padding: 4rem 1.5rem 8rem 1.5rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 5rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .eyebrow {
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.15em;
        color: var(--text-tertiary);
        font-weight: 600;
        margin-bottom: 1rem;
        display: block;
    }

    h1 {
        font-family: var(--font-display);
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--text-primary);
    }

    .subtitle {
        font-size: 1.1rem;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    /* Grid Layout */
    .workshops-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
    }

    .workshop-card {
        background: var(--bg-surface);
        border: 1px solid var(--border-subtle);
        border-radius: 16px;
        padding: 2.5rem;
        display: flex;
        flex-direction: column;
        transition:
            transform 0.3s ease,
            border-color 0.3s ease;
        height: 100%;
    }

    .workshop-card:hover {
        transform: translateY(-5px);
        border-color: var(--text-secondary);
    }

    .workshop-card.highlight {
        background: linear-gradient(
            145deg,
            rgba(255, 255, 255, 0.03),
            var(--bg-surface)
        );
        border: 1px solid rgba(255, 209, 64, 0.4); /* Gold/Yellow accent */
        position: relative;
    }

    /* .workshop-card.highlight::before {
    content: "Recommended";
    position: absolute;
    top: -12px;
    right: 2rem;
    background: #ffd140;
    color: #000;
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    text-transform: uppercase;
  } */

    .card-header {
        margin-bottom: 2rem;
    }

    .workshop-card h3 {
        font-family: var(--font-display);
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--text-primary);
        line-height: 1.3;
    }

    .description {
        font-size: 0.95rem;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .card-details {
        flex-grow: 1;
        margin-bottom: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-subtle);
    }

    .meta-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .price {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        font-family: var(--font-ui);
    }

    .duration-badge {
        background: rgba(255, 255, 255, 0.05);
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-size: 0.8rem;
        color: var(--text-secondary);
        border: 1px solid var(--border-subtle);
    }

    .features-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .features-list li {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin-bottom: 0.8rem;
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        line-height: 1.5;
    }

    .check {
        color: #4ade80; /* Green check */
        font-weight: bold;
    }

    .book-btn {
        display: block;
        width: 100%;
        padding: 1rem;
        text-align: center;
        background: var(--text-primary);
        color: var(--bg-color);
        text-decoration: none;
        font-weight: 600;
        border-radius: 8px;
        transition: opacity 0.2s;
    }

    .book-btn:hover {
        opacity: 0.9;
    }

    .workshop-card.highlight .book-btn {
        background: #ffd140; /* Yellow button for highlight */
        color: #000;
    }
</style>
