---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SubmissionForm from "../../components/resources/SubmissionForm";
import "../../styles/resources.css";

const title = "Submit a Resource";
const description = "Share a useful tool or article with the community.";
---

<BaseLayout title={title} description={description}>
    <div class="hub-container">
        <div class="hub-header">
            <h1 class="hub-title">Submit a Resource</h1>
            <p class="hub-subtitle">
                Found something cool? Share it with the community. All
                submissions are reviewed before publishing.
            </p>
        </div>

        <SubmissionForm client:load />

        <div style="text-align: center; margin-top: 24px;">
            <a
                href="/resources"
                style="color: var(--text-secondary); text-decoration: underline;"
            >
                &larr; Back to Resources
            </a>
        </div>
    </div>
</BaseLayout>
