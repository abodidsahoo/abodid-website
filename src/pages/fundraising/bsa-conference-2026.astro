---
import BaseLayout from "../../layouts/BaseLayout.astro";

const pageTitle = "BSA Annual Conference 2026 Partnership";
const pageDescription =
    "Two peer-reviewed papers accepted at BSA Annual Conference 2026. Seeking support for travel, visa, and accommodation.";

const heroImage =
    "https://sociology.plus/wp-content/uploads/2022/07/British-Sociological-Association.png";

const invitationImage =
    "https://jwipqbjxpmgyevfzpjjx.supabase.co/storage/v1/object/public/misc/BSA/AC%202026%20-%20Invitation%20Letter%20-%20Abodid%20Sahoo_page-0001.jpg";
const invitationDownload = invitationImage;

const upiQrImage =
    "https://jwipqbjxpmgyevfzpjjx.supabase.co/storage/v1/object/public/misc/cambridge/Screenshot%202026-02-16%20at%2004.51.12.png";

const researchPapers = [
    {
        mode: "Poster Presentation",
        title:
            "Cloud Memories and Algorithmic Recall: iCloud, AI Sorting, and Ownership",
        stream: "Science, Technology and Digital Studies",
        session: "STS Posters",
        summary:
            "Explores how cloud infrastructures shape personal memory and how algorithmic sorting influences ownership, recall, and emotional interpretation.",
    },
    {
        mode: "Roundtable Presentation",
        title:
            "Rejection Re-Activates Unresolved Grief: Findings from an Archive-Led Autoethnography",
        stream: "Families and Relationships",
        session: "FAR Roundtables",
        summary:
            "Examines how rejection and grief resurface through personal archives, and how digital traces carry layered emotional histories over time.",
    },
];

const keyDetails = [
    {
        label: "Status",
        primary: "2 Papers Accepted",
        secondary: "Conference Fee Funded by BSA",
    },
    {
        label: "Funding Target",
        primary: "GBP 1,200",
        secondary: "Travel, stay, visa, local costs",
    },
    {
        label: "Conference",
        primary: "BSA Annual Conference 2026",
        secondary: "75th Anniversary Edition",
    },
    {
        label: "Location",
        primary: "University of Manchester",
        secondary: "United Kingdom",
    },
];

const costRows = [
    {
        expense: "International Flight (India <-> UK)",
        amount: "GBP 500",
    },
    {
        expense: "Accommodation (3-4 nights)",
        amount: "GBP 350",
    },
    {
        expense: "Local Travel (Manchester + transit)",
        amount: "GBP 150",
    },
    {
        expense: "Food and essentials",
        amount: "GBP 150",
    },
    {
        expense: "Insurance / contingency",
        amount: "GBP 50",
    },
];

const partnershipOffers = [
    {
        title: "Research Updates During Conference",
        body: "Short research dispatches from sessions, methods, and discussions relevant to your institutional interests.",
    },
    {
        title: "Post-Conference Interactive Session",
        body: "A focused <strong>interactive workshop</strong> for your students/team on my methods, findings, and transferable research workflows.",
    },
    {
        title: "Acknowledgment in Publication Outputs",
        body: "I will <strong>credit your support in publication acknowledgments</strong> wherever these papers or related outputs are published.",
    },
    {
        title: "Public Documentation and Support Mention",
        body: "Clear and transparent public write-up with a visible <strong>support mention</strong> across related output pages.",
    },
    {
        title: "Student Guidance",
        body: "Personalized <strong>guidance</strong> for students applying to similar conferences, grants, and research opportunities.",
    },
];

const whoFor = [
    "Universities, research labs, and academic departments",
    "Students and institutions are the primary audience for this collaboration",
    "Foundations and education-focused CSR teams",
    "Interdisciplinary groups in sociology, design, digital humanities, and HCI",
    "Culture-tech and research-led organisations",
];
---

<BaseLayout
    title={pageTitle}
    description={pageDescription}
    fullWidth={true}
    gridVariant="moodboard"
>
    <section class="bsa-page">
        <div class="page-shell">
            <header class="hero panel">
                <div class="hero-grid">
                    <div class="hero-copy">
                        <p class="eyebrow">BSA Conference Partnership Invitation</p>
                        <h1>
                            Looking for partners to support my BSA Conference 2026 journey
                        </h1>
                        <p class="hero-date">British Sociological Association Annual Conference 2026</p>
                        <p class="hero-subtitle">
                            Two peer-reviewed research works have been accepted at the BSA Annual Conference.
                            My conference registration fee is already funded.
                        </p>
                        <p class="hero-ask">
                            I am urgently looking for a partner or sponsor to support my travel,
                            visa, accommodation, and local conference costs.
                        </p>
                        <div class="hero-actions">
                            <a class="btn btn-primary" href="mailto:abodidsahoo@gmail.com?subject=BSA%20Conference%20Partnership%20Discussion"
                                >Contact Me</a
                            >
                            <a class="btn" href="#partnership-offers"
                                >What am I offering?</a
                            >
                        </div>
                    </div>

                    <figure class="hero-photo panel-soft hero-logo-card">
                        <img
                            src={heroImage}
                            alt="British Sociological Association conference visual"
                            loading="lazy"
                        />
                        <figcaption class="meta">
                            BSA Annual Conference 2026
                        </figcaption>
                    </figure>
                </div>
            </header>

            <section class="section panel">
                <div class="story-grid">
                    <article class="panel-soft why-card">
                        <p class="meta">Why it is important to me</p>
                        <h3>About This Milestone</h3>
                        <p>
                            The British Sociological Association Annual Conference is one of the
                            UK&apos;s key sociology platforms. Presenting here creates meaningful
                            room for interdisciplinary research at the intersection of memory,
                            technology, archives, and emotion.
                        </p>
                        <div class="why-break" aria-hidden="true"></div>
                        <h3>My Story</h3>
                        <p>
                            I was born and raised in <strong>Odisha</strong>, India, in a small town.
                            I come from a middle-class family where every educational decision has
                            required careful planning.
                        </p>
                        <p>
                            I hold a Master&apos;s degree from the <strong>Royal College of Art, London</strong>,
                            supported by a full <strong>scholarship from Apple</strong>.
                        </p>
                        <p>
                            Presenting at BSA is a major academic step in my long-term path toward
                            doctoral research. It helps me position South Asian lived contexts within
                            global sociological discourse.
                        </p>
                    </article>

                    <aside class="panel-soft details-card">
                        <p class="meta">Key Details at a Glance</p>
                        <div class="details-stack">
                            {
                                keyDetails.map((item) => (
                                    <article class="detail-item">
                                        <p class="meta">{item.label}</p>
                                        <h3>{item.primary}</h3>
                                        <p>{item.secondary}</p>
                                    </article>
                                ))
                            }
                        </div>
                    </aside>
                </div>
            </section>

            <section class="section panel">
                <div class="section-header">
                    <p class="meta">Accepted Research</p>
                    <h2>Peer-reviewed papers selected for BSA 2026.</h2>
                </div>

                <div class="papers-grid">
                    {
                        researchPapers.map((paper) => (
                            <article class="panel-soft paper-card">
                                <p class="meta">{paper.mode}</p>
                                <h3>{paper.title}</h3>
                                <div class="paper-tags">
                                    <span>{paper.stream}</span>
                                    <span>{paper.session}</span>
                                </div>
                                <p>{paper.summary}</p>
                            </article>
                        ))
                    }
                </div>
            </section>

            <section class="section panel">
                <div class="section-header">
                    <p class="meta">Invitation Letter</p>
                    <h2>Official BSA invitation.</h2>
                </div>

                <div class="letter-grid">
                    <article class="panel-soft letter-card">
                        <div class="letter-toolbar">
                            <a class="btn btn-primary" href={invitationDownload} download>
                                Download Invitation Letter
                            </a>
                        </div>
                        <div class="letter-surface">
                            <img
                                src={invitationImage}
                                alt="BSA Annual Conference 2026 invitation letter for Abodid Sahoo"
                                loading="lazy"
                            />
                        </div>
                    </article>

                    <aside class="panel-soft letter-note">
                        <p class="meta">Quick Verification</p>
                        <h3>Conference invitation received</h3>
                        <p>
                            This official letter confirms my invitation to present at the BSA
                            Annual Conference 2026.
                        </p>
                        <ul class="focus-list">
                            <li>Two accepted contributions: Poster + Roundtable</li>
                            <li>Conference registration is already funded</li>
                            <li>Support needed for travel, stay, visa, and local costs</li>
                        </ul>
                    </aside>
                </div>
            </section>

            <section class="section panel" id="partnership-offers">
                <div class="support-layout">
                    <div class="support-left">
                        <div class="section-header support-head">
                            <p class="meta">Support Snapshot</p>
                            <h2>Funding breakdown.</h2>
                        </div>
                        <div class="cost-column">
                            <article class="cost-card panel-soft">
                                <p class="meta">Funding Breakdown</p>
                                <div class="table-wrap compact-table-wrap">
                                    <table class="cost-table">
                                        <thead>
                                            <tr>
                                                <th>Cost Head</th>
                                                <th>Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {
                                                costRows.map((row) => (
                                                    <tr>
                                                        <td>{row.expense}</td>
                                                        <td>{row.amount}</td>
                                                    </tr>
                                                ))
                                            }
                                            <tr class="total-row">
                                                <td>Total Target</td>
                                                <td>GBP 1,200</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </article>

                            <p class="fund-call panel-soft">
                                I am urgently looking for a partner/sponsor to support this journey and
                                help me represent this work in person at BSA 2026.
                            </p>

                            <aside class="panel-soft audience-card">
                                <p class="meta">Who This Is For</p>
                                <h3>Relevant partners and supporters</h3>
                                <ul class="focus-list">
                                    {
                                        whoFor.map((item) => (
                                            <li>{item}</li>
                                        ))
                                    }
                                </ul>
                            </aside>
                        </div>
                    </div>

                    <div class="support-right">
                        <div class="section-header support-head">
                            <p class="meta">Partnership</p>
                            <h2>What I am offering in return.</h2>
                        </div>
                        <div class="offers-grid">
                            {
                                partnershipOffers.map((item) => (
                                    <article class="offer-card panel-soft">
                                        <h3>{item.title}</h3>
                                        <p set:html={item.body}></p>
                                    </article>
                                ))
                            }
                        </div>
                    </div>
                </div>
            </section>

            <section class="section panel">
                <div class="section-header">
                    <p class="meta">Bank Transfer Details</p>
                    <h2>Direct transfer options</h2>
                </div>

                <p class="mono-line">
                    Transfer subject: Education Fees - BSA Conference
                </p>

                <div class="bank-grid">
                    <article class="bank-card panel-soft">
                        <h3>Access Bank (India)</h3>
                        <dl>
                            <div class="bank-row">
                                <dt>Account Holder</dt>
                                <dd>Abodid Sahoo</dd>
                            </div>
                            <div class="bank-row">
                                <dt>Account Number</dt>
                                <dd>912010033704055</dd>
                            </div>
                            <div class="bank-row">
                                <dt>IFSC Code</dt>
                                <dd>UTIB0003179</dd>
                            </div>
                        </dl>
                    </article>

                    <article class="bank-card panel-soft">
                        <h3>Lloyds Bank (UK)</h3>
                        <dl>
                            <div class="bank-row">
                                <dt>Name on Account</dt>
                                <dd>Abodid Sahoo</dd>
                            </div>
                            <div class="bank-row">
                                <dt>Sort Code</dt>
                                <dd>30-90-89</dd>
                            </div>
                            <div class="bank-row">
                                <dt>Account Number</dt>
                                <dd>43644963</dd>
                            </div>
                        </dl>
                    </article>

                    <article class="bank-card panel-soft upi-card">
                        <h3>UPI (India)</h3>
                        <dl>
                            <div class="bank-row">
                                <dt>UPI ID</dt>
                                <dd>
                                    <strong class="upi-id">abodidsahoo@axl</strong>
                                </dd>
                            </div>
                        </dl>
                        <img
                            class="upi-qr"
                            src={upiQrImage}
                            alt="UPI QR code for transfer"
                            loading="lazy"
                        />
                    </article>
                </div>
            </section>

            <section class="section panel contact-panel">
                <div class="contact-layout">
                    <div class="contact-copy">
                        <div class="section-header">
                            <p class="meta">Let&apos;s Talk</p>
                            <h2>If you have reached this far, let&apos;s talk.</h2>
                        </div>
                        <p>
                            I&apos;m sure someone would be willing to support this work anyway,
                            so if it&apos;s not you, perhaps someone else will. Then why not you?
                        </p>
                        <div class="hero-actions">
                            <a class="btn btn-primary" href="mailto:abodidsahoo@gmail.com"
                                >abodidsahoo@gmail.com</a
                            >
                            <a class="btn" href="https://wa.me/919439094370"
                                >WhatsApp / Phone: +91 9439094370</a
                            >
                        </div>
                    </div>

                    <figure class="contact-signature">
                        <img
                            src="/images/signature-black.png"
                            alt="Signature of Abodid Sahoo"
                        />
                    </figure>
                </div>
            </section>

            <div class="footer-spacer" aria-hidden="true"></div>
        </div>
    </section>
</BaseLayout>

<style>
    :global(body[data-grid-variant="moodboard"]) {
        --grid-color-1: rgba(83, 62, 37, 0.28);
        --grid-color-2: rgba(83, 62, 37, 0.09);
        background: radial-gradient(circle at top, #fff8ea 0%, #f3e5cd 45%, #ecddc0 100%)
            fixed !important;
        color: #231a13;
    }

    :global(body[data-grid-variant="moodboard"] .global-grid-bg) {
        display: none;
    }

    :global(body[data-grid-variant="moodboard"] .global-glow-bg) {
        --glow-radius: 560px;
        opacity: 1;
        background-size: 52px 52px;
    }

    :global(body[data-grid-variant="moodboard"] .site-footer) {
        background: rgba(243, 229, 205, 0.88);
        border-top: 1px solid rgba(93, 67, 38, 0.26);
    }

    .bsa-page {
        width: 100%;
        padding: clamp(2.4rem, 4vh, 3.4rem) 0 11rem;
    }

    .page-shell {
        width: min(1490px, calc(100vw - 2.5rem));
        margin: 0 auto;
        display: grid;
        gap: clamp(2rem, 2.7vw, 2.9rem);
    }

    .panel {
        background: rgba(255, 250, 243, 0.84);
        border: 1px solid rgba(101, 75, 44, 0.28);
        border-radius: 22px;
        padding: clamp(1.55rem, 2.9vw, 2.8rem);
        box-shadow: 0 18px 35px rgba(86, 59, 29, 0.1);
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);
    }

    .panel-soft {
        background: rgba(255, 255, 255, 0.72);
        border: 1px solid rgba(117, 86, 52, 0.22);
        border-radius: 18px;
        padding: clamp(1.12rem, 1.65vw, 1.45rem);
    }

    .eyebrow,
    .meta,
    table thead th,
    .mono-line,
    .bank-row dt {
        font-family: var(--font-ui);
        letter-spacing: 0.04em;
        text-transform: uppercase;
        font-size: 0.73rem;
        color: rgba(70, 45, 20, 0.82);
    }

    h1,
    h2,
    h3,
    p,
    li,
    td,
    dd,
    th,
    span {
        color: #241912;
        font-family: var(--font-display);
    }

    .hero {
        background:
            linear-gradient(125deg, rgba(255, 255, 255, 0.8), rgba(255, 235, 200, 0.78)),
            linear-gradient(35deg, rgba(255, 220, 171, 0.4), rgba(255, 247, 231, 0.65));
        padding: clamp(1.75rem, 3.1vw, 3.1rem);
    }

    .hero-grid {
        display: grid;
        grid-template-columns: 1.05fr 0.95fr;
        gap: clamp(1.2rem, 2.15vw, 2rem);
        align-items: center;
    }

    .hero-copy {
        display: grid;
        gap: 0.8rem;
        align-content: start;
        padding-block: 0.3rem;
    }

    h1 {
        font-size: clamp(1.8rem, 3.3vw, 3.05rem);
        margin: 0.15rem 0 0.35rem;
        line-height: 1.08;
    }

    .hero-date {
        margin: 0;
        color: rgba(65, 42, 19, 0.78);
        font-size: 0.9rem;
        font-family: var(--font-ui);
        text-transform: uppercase;
        letter-spacing: 0.06em;
    }

    .hero-subtitle {
        margin: 0.15rem 0 0;
        font-size: clamp(1rem, 1.3vw, 1.15rem);
        line-height: 1.62;
        max-width: 66ch;
    }

    .hero-ask {
        margin: 0.25rem 0 0;
        font-size: clamp(1rem, 1.3vw, 1.15rem);
        line-height: 1.62;
        max-width: 66ch;
    }

    .hero-photo {
        display: grid;
        gap: 0.6rem;
        padding: 0.65rem;
        overflow: hidden;
    }

    .hero-photo img {
        width: 100%;
        height: 100%;
        max-height: 450px;
        object-fit: cover;
        border-radius: 14px;
        border: 1px solid rgba(109, 79, 48, 0.28);
    }

    .hero-photo figcaption {
        margin: 0;
    }

    .hero-logo-card img {
        object-fit: contain;
        background: #ffffff;
        padding: clamp(0.7rem, 1.4vw, 1.2rem);
    }

    .hero-actions {
        margin-top: 1.4rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.58rem 0.94rem;
        border: 1px solid rgba(87, 56, 26, 0.55);
        border-radius: 999px;
        text-decoration: none;
        color: #27150a;
        font-family: var(--font-ui);
        font-size: 0.74rem;
        line-height: 1.2;
        transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
        background: rgba(255, 255, 255, 0.74);
        cursor: pointer;
    }

    .btn:hover,
    .btn:focus-visible {
        transform: translateY(-1px);
        box-shadow: 0 10px 18px rgba(89, 58, 29, 0.14);
        outline: none;
    }

    .btn-primary {
        background: #7a1b0f;
        color: #fff8f1;
        border-color: #7a1b0f;
    }

    .section {
        display: grid;
        gap: clamp(1.45rem, 1.9vw, 2rem);
    }

    .section-header {
        display: grid;
        gap: 0.6rem;
    }

    .section-header h2 {
        margin: 0;
        font-size: clamp(1.2rem, 2vw, 1.9rem);
        line-height: 1.22;
    }

    .story-grid,
    .support-layout,
    .bank-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: clamp(1.45rem, 2.2vw, 2.2rem);
        align-items: start;
    }

    .why-card {
        display: grid;
        gap: 1.05rem;
        align-content: start;
        padding: clamp(1.45rem, 2.3vw, 2rem);
    }

    .why-card h3 {
        margin: 1.05rem 0 0.42rem;
        font-size: clamp(1.08rem, 1.45vw, 1.28rem);
        font-weight: 700;
        line-height: 1.28;
    }

    .why-card .meta + h3 {
        margin-top: 0.48rem;
    }

    .why-card h3 + p {
        margin-top: 0;
    }

    .why-card p + p {
        margin-top: 0.5rem;
    }

    .why-card p {
        margin: 0;
        max-width: 68ch;
        line-height: 1.6;
    }

    .why-break {
        height: 1px;
        width: 100%;
        margin: 0.2rem 0 0.15rem;
        background: linear-gradient(
            90deg,
            rgba(112, 80, 48, 0.42),
            rgba(112, 80, 48, 0.15)
        );
    }

    .details-card {
        display: grid;
        gap: 0.8rem;
        align-content: start;
    }

    .details-stack {
        display: grid;
        gap: 0.75rem;
    }

    .detail-item {
        padding: 0.9rem;
        border-radius: 14px;
        border: 1px solid rgba(121, 93, 62, 0.22);
        background: rgba(255, 255, 255, 0.82);
        display: grid;
        gap: 0.25rem;
    }

    .detail-item h3 {
        margin: 0;
        font-size: clamp(1rem, 1.5vw, 1.2rem);
        line-height: 1.28;
    }

    .detail-item p {
        margin: 0;
        font-size: 0.9rem;
        line-height: 1.45;
    }

    .papers-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: clamp(1rem, 1.8vw, 1.5rem);
    }

    .letter-grid {
        display: grid;
        grid-template-columns: 1.08fr 0.92fr;
        gap: clamp(1.2rem, 2vw, 2rem);
        align-items: start;
    }

    .letter-card {
        display: grid;
        gap: 0.95rem;
    }

    .letter-toolbar {
        display: flex;
        flex-wrap: wrap;
        gap: 0.65rem;
    }

    .letter-surface {
        border-radius: 14px;
        border: 1px solid rgba(108, 80, 48, 0.32);
        background: #fbf7f0;
        min-height: clamp(440px, 67vh, 820px);
        overflow: hidden;
    }

    .letter-surface img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        display: block;
        background: #ffffff;
    }

    .letter-note {
        display: grid;
        gap: 0.8rem;
        align-content: start;
    }

    .letter-note h3 {
        margin: 0;
        font-size: clamp(1.05rem, 1.55vw, 1.3rem);
        line-height: 1.3;
    }

    .letter-note p {
        margin: 0;
        line-height: 1.6;
    }

    .paper-card {
        display: grid;
        gap: 0.85rem;
        align-content: start;
        border-left: 3px solid rgba(122, 27, 15, 0.48);
        transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    }

    .paper-card:hover,
    .paper-card:focus-within {
        transform: translateY(-2px);
        border-left-color: rgba(122, 27, 15, 0.85);
        box-shadow: 0 10px 24px rgba(84, 56, 29, 0.14);
    }

    .paper-card h3 {
        margin: 0;
        font-size: clamp(1rem, 1.35vw, 1.16rem);
        line-height: 1.4;
    }

    .paper-card p {
        margin: 0;
        line-height: 1.58;
    }

    .paper-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.45rem;
    }

    .paper-tags span {
        display: inline-flex;
        align-items: center;
        padding: 0.28rem 0.55rem;
        border-radius: 999px;
        border: 1px solid rgba(95, 66, 36, 0.3);
        background: rgba(255, 245, 227, 0.9);
        font-family: var(--font-ui);
        font-size: 0.66rem;
        line-height: 1.1;
        text-transform: uppercase;
        letter-spacing: 0.04em;
    }

    .support-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: clamp(1.45rem, 2.2vw, 2.2rem);
        align-items: start;
    }

    .support-left,
