<script is:inline>
    (() => {
        const briefVideo = document.querySelector("[data-brief-video]");
        const soundToggle = document.querySelector("[data-brief-sound-toggle]");
        const restartButton = document.querySelector("[data-video-restart]");

        if (briefVideo && soundToggle && restartButton) {
            const syncButton = () => {
                const muted = briefVideo.muted;
                soundToggle.textContent = muted ? "Enable Sound" : "Sound On";
                soundToggle.setAttribute("aria-pressed", muted ? "false" : "true");
            };

            syncButton();

            soundToggle.addEventListener("click", async () => {
                briefVideo.muted = !briefVideo.muted;
                try {
                    await briefVideo.play();
                } catch {
                    // Keep state if autoplay policy prevents playback.
                }
                syncButton();
            });

            restartButton.addEventListener("click", async () => {
                briefVideo.currentTime = 0;
                briefVideo.muted = false;
                try {
                    await briefVideo.play();
                } catch {
                    // Ignore blocked playback errors.
                }
                syncButton();
            });

            briefVideo.addEventListener("volumechange", syncButton);
        }
    })();
</script>
