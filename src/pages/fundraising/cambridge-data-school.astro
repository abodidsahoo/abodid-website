---
import BaseLayout from "../../layouts/BaseLayout.astro";

const pageTitle = "Cambridge Cultural Heritage Data School Partnership";
const pageDescription =
    "Selected for Cultural Heritage Data School (April 2026). Seeking partnership support for travel, visa, and accommodation.";

const heroImage =
    "https://wallpapersok.com/images/high/cambridge-university-hall-7n378cd5chdvjxdg.jpg";

const invitationImage =
    "https://jwipqbjxpmgyevfzpjjx.supabase.co/storage/v1/object/public/misc/cv/Letter-of-Invitation_Abodid-Sahoo.jpg";
const invitationPdfDownload =
    "https://jwipqbjxpmgyevfzpjjx.supabase.co/storage/v1/object/public/misc/cv/Letter%20of%20Invitation_Abodid%20Sahoo.pdf?download=Letter-of-Invitation_Abodid-Sahoo.pdf";
const invitationCompanionGif =
    "https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExM2Z6M3M2MTdkbTk4MTBmZ2tlOTd3MHZyMGtmNnVxYTlmcjRlb2w2ZCZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/jIXcTEmU5RCpO/giphy.gif";

const threeMinuteVideo =
    "https://jwipqbjxpmgyevfzpjjx.supabase.co/storage/v1/object/public/misc/cambridge/3mins-Visual-Edit-Cambridge-V2-compressed.mp4";
const fullStoryYoutube = "https://www.youtube.com/watch?v=ec4fWTv6hk4";
const upiQrImage =
    "https://jwipqbjxpmgyevfzpjjx.supabase.co/storage/v1/object/public/misc/cambridge/Screenshot%202026-02-16%20at%2004.51.12.png";

const costRows = [
    {
        expense: "Travel",
        amount: "GBP 800",
    },
    {
        expense: "Accommodation",
        amount: "GBP 700",
    },
    {
        expense: "Visa",
        amount: "GBP 200",
    },
    {
        expense: "Misc (food, local travel)",
        amount: "GBP 300",
    },
];

const partnershipOffers = [
    {
        title: "5-Part Cambridge Field Notes Series",
        body: "Daily short videos with partner/<strong>backer credit</strong>.",
    },
    {
        title: "3-Hour Hands-on Workshop",
        body: "Plus, a 3-hour hands-on <strong>interactive workshop</strong> post-return for your team/students on cultural heritage data and visual storytelling. I will also share resources and tools for efficiently using AI to develop digital interfaces for research and archival purposes.",
    },
    {
        title: "Public Write-up and Documentation",
        body: "Detailed public write-up and output archive with transparent <strong>support mention</strong>.",
    },
    {
        title: "Merchandise Collaboration",
        body: "The Cambridge campus is beautiful, and I&apos;m excited to collaborate with fashion designers and help you elevate your brand presence internationally!",
    },
    {
        title: "Personalized Student Guidance",
        body: "I would love to offer transparent personalized <strong>guidance</strong> for your team members/students applying to similar opportunities, including a clear background of my <strong>full application process</strong>.",
    },
];

const whoFor = [
    "Foundations, museums, universities, and research institutions",
    "Culture-tech, heritage-tech, and AI + data organisations",
    "CSR teams and brands working in culture, education, and knowledge",
    "Patrons and HNIs supporting arts, research, and culture",
    "Alumni from NIT Rourkela, NID Ahmedabad, and Royal College of Art",
    "Government of Odisha (Culture/Science Ministry)",
];

---

<BaseLayout
    title={pageTitle}
    description={pageDescription}
    fullWidth={true}
    gridVariant="moodboard"
>
    <Fragment slot="head">
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Gochi+Hand&display=swap"
            rel="stylesheet"
        />
    </Fragment>
    <section class="cambridge-page">
        <div class="page-shell">
            <header class="hero panel">
                <div class="hero-grid">
                    <div class="hero-copy">
                        <p class="eyebrow">Cambridge Partnership Invitation</p>
                        <h1>
                            Looking for Partners for Cultural Heritage Data School
                        </h1>
                        <p class="hero-date">April 13-17, 2026</p>
                        <p class="hero-subtitle">
                            I have been offered a place in the Cultural
                            Heritage Data School happening in April 2026 at the
                            University of Cambridge with a program fee bursary.
                        </p>
                        <p class="hero-ask">
                            I am urgently looking for a partner or sponsor to support my travel, visa, and accommodation.
                        </p>
                        <div class="hero-actions">
                            <a class="btn btn-primary" href="mailto:abodidsahoo@gmail.com?subject=Cambridge%20Partnership%20Discussion"
                                >Contact Me</a
                            >
                            <a class="btn" href="#partnership-offers"
                                >What am I offering?</a
                            >
                        </div>
                    </div>

                    <figure class="hero-photo panel-soft">
                        <img
                            src={heroImage}
                            alt="Cambridge architecture"
                            loading="lazy"
                        />
                        <figcaption class="meta">
                            University of Cambridge, United Kingdom
                        </figcaption>
                    </figure>
                </div>
            </header>

            <section class="section panel">
                <div class="watch-grid">
                    <article class="video-card">
                        <div class="portrait-shell">
                            <video
                                data-brief-video
                                autoplay
                                muted
                                playsinline
                                loop
                                controls
                                preload="metadata"
                            >
                                <source src={threeMinuteVideo} type="video/mp4" />
                            </video>
                        </div>
                        <div class="video-buttons">
                            <button
                                class="btn"
                                type="button"
                                data-brief-sound-toggle
                                aria-pressed="false"
                            >
                                Enable Sound
                            </button>
                            <button class="btn btn-primary" type="button" data-video-restart>
                                Start from Beginning
                            </button>
                        </div>
                    </article>

                    <article class="panel-soft why-card watch-why-card">
                        <p class="meta">Why it is important to me</p>
                        <h3>About the Program</h3>
                        <p>
                            The Cambridge Cultural Heritage Data School is an intensive,
                            in-person programme focused on experience design, cultural
                            data, and digital humanities. It explores how data,
                            culture, and storytelling can be transformed into meaningful
                            public experiences.
                        </p>
                        <div class="why-break" aria-hidden="true"></div>
                        <h3>My Background</h3>
                        <p>
                            I was born and raised in <strong>Odisha</strong>, India, in a small town. I
                            come from a middle-class family where education matters
                            deeply, and where financial decisions are made carefully.
                        </p>
                        <p>
                            I hold a Master&apos;s degree in Digital Direction from the
                            <strong>Royal College of Art, London</strong>, supported by a full <strong>scholarship from Apple</strong>.
                        </p>
                        <p>
                            Scholarships like this have paved my path from a small town
                            to world-renowned institutions. In the future, I <strong>aspire to pursue a PhD at Cambridge</strong>, and this Data School feels like the <strong>perfect stepping stone</strong> to understand the school more
                            closely, interact with mentors, and explore full funding
                            opportunities for my doctorate.
                        </p>
                        <p>
                            I want to bring in my real-life projects, my <strong>South Asian context</strong>,
                            the deep-rooted human-ness I share with my local
                            communities, and the stories I carry with me. My goal is to
                            merge these with world-class technologies and social sciences
                            to build products and organisations that truly make
                            people&apos;s lives better.
                        </p>
                    </article>
                </div>
            </section>

            <section class="section panel">
                <div class="section-header">
                    <p class="meta">What Am I Raising?</p>
                    <h2>Invitation Letter.</h2>
                </div>

                <div class="raising-grid">
                    <article class="invitation-card panel-soft">
                        <div class="invitation-toolbar">
                            <a
                                class="btn btn-primary"
                                href={invitationPdfDownload}
                                download
                            >
                                Download Invitation Letter PDF File
                            </a>
                        </div>

                        <div class="invitation-surface">
                            <img
                                src={invitationImage}
                                alt="Invitation letter from Cambridge Cultural Heritage Data School"
                                loading="lazy"
                            />
                        </div>
                    </article>
                    <article class="invitation-gif-card">
                        <div class="invitation-gif-stack">
                            <img
                                src={invitationCompanionGif}
                                alt="Animated visual complementing the invitation letter"
                                loading="lazy"
                            />
                            <p class="invitation-gif-caption gochi-hand-regular">
                                &ldquo;This part of my life, this little part, is called happiness.&rdquo;
                            </p>
                        </div>
                    </article>
                </div>
            </section>

            <section class="section panel" id="partnership-offers">
                <div class="support-layout">
                    <div class="support-left">
                        <div class="section-header support-head">
                            <p class="meta">Support Snapshot</p>
                            <h2>Funding breakdown.</h2>
                        </div>
                        <div class="cost-column">
                            <article class="cost-card panel-soft">
                                <p class="meta">Funding Breakdown</p>
                                <div class="table-wrap compact-table-wrap">
                                    <table class="cost-table">
                                        <thead>
                                            <tr>
                                                <th>Cost Head</th>
                                                <th>Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {
                                                costRows.map((row) => (
                                                    <tr>
                                                        <td>{row.expense}</td>
                                                        <td>{row.amount}</td>
                                                    </tr>
                                                ))
                                            }
                                            <tr class="total-row">
                                                <td>Total Target</td>
                                                <td>GBP 2,000</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </article>
                            <aside class="panel-soft audience-card">
                                <p class="meta">Who This Is For</p>
                                <h3>Relevant partners and supporters</h3>
                                <ul class="focus-list">
                                    {
                                        whoFor.map((item) => (
                                            <li>{item}</li>
                                        ))
                                    }
                                </ul>
                            </aside>
                        </div>
                    </div>

                    <div class="support-right">
                        <div class="section-header support-head">
                            <p class="meta">Partnership</p>
                            <h2>What I am offering in return.</h2>
                        </div>
                        <div class="offers-grid">
                            {
                                partnershipOffers.map((item) => (
                                    <article class="offer-card panel-soft">
                                        <h3>{item.title}</h3>
                                        <p set:html={item.body}></p>
                                    </article>
                                ))
                            }
                        </div>
                    </div>
                </div>
            </section>

            <section class="section panel">
                <div class="section-header">
                    <p class="meta">Full Story</p>
                    <h2>15-minute full story video</h2>
                </div>

                <article class="panel-soft full-story full-story-wide" id="full-story-video">
                    <div class="full-story-head">
                        <p class="meta">15-Min Full Story</p>
                        <a class="btn" href={fullStoryYoutube}>Open on YouTube</a>
                    </div>
                    <div class="vertical-iframe">
                        <iframe
                            src="https://www.youtube.com/embed/ec4fWTv6hk4?rel=0&modestbranding=1"
                            title="Cambridge full story video"
                            loading="lazy"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                            allowfullscreen
                        ></iframe>
                    </div>
                </article>
            </section>

            <section class="section panel">
                <div class="section-header">
                    <p class="meta">Bank Transfer Details</p>
                    <h2>Direct transfer options</h2>
                </div>

                <p class="mono-line">
                    Transfer subject: Education Fees - Cambridge University
                </p>

                <div class="bank-grid">
                    <article class="bank-card panel-soft">
                        <h3>Access Bank (India)</h3>
                        <dl>
                            <div class="bank-row">
                                <dt>Account Holder</dt>
                                <dd>Abodid Sahoo</dd>
                            </div>
                            <div class="bank-row">
                                <dt>Account Number</dt>
                                <dd>912010033704055</dd>
                            </div>
                            <div class="bank-row">
                                <dt>IFSC Code</dt>
                                <dd>UTIB0003179</dd>
                            </div>
                        </dl>
                    </article>

                    <article class="bank-card panel-soft">
                        <h3>Lloyds Bank (UK)</h3>
                        <dl>
                            <div class="bank-row">
                                <dt>Name on Account</dt>
                                <dd>Abodid Sahoo</dd>
                            </div>
                            <div class="bank-row">
                                <dt>Sort Code</dt>
                                <dd>30-90-89</dd>
                            </div>
                            <div class="bank-row">
                                <dt>Account Number</dt>
                                <dd>43644963</dd>
                            </div>
                        </dl>
                    </article>

                    <article class="bank-card panel-soft upi-card">
                        <h3>UPI (India)</h3>
                        <dl>
                            <div class="bank-row">
                                <dt>UPI ID</dt>
                                <dd>
                                    <strong class="upi-id">abodidsahoo@axl</strong>
                                </dd>
                            </div>
                        </dl>
                        <img
                            class="upi-qr"
                            src={upiQrImage}
                            alt="UPI QR code for transfer"
                            loading="lazy"
                        />
                    </article>
                </div>
            </section>

            <section class="section panel contact-panel">
                <div class="contact-layout">
                    <div class="contact-copy">
                        <div class="section-header">
                            <p class="meta">Let's Talk</p>
                            <h2>If you have reached this far, let&apos;s talk.</h2>
                        </div>
                        <p>
                            I&apos;m sure someone would be willing to fund this anyway, so if you
                            would not be funding, then perhaps someone else would be helping
                            me out. Then why not you?
                        </p>
                        <div class="hero-actions">
                            <a class="btn btn-primary" href="mailto:abodidsahoo@gmail.com"
                                >abodidsahoo@gmail.com</a
                            >
                            <a class="btn" href="https://wa.me/919439094370"
                                >WhatsApp / Phone: +91 9439094370</a
                            >
                        </div>
                    </div>

                    <figure class="contact-signature">
                        <img
                            src="/images/signature-black.png"
                            alt="Signature of Abodid Sahoo"
                        />
                    </figure>
                </div>
            </section>

            <div class="footer-spacer" aria-hidden="true"></div>
        </div>
    </section>
</BaseLayout>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Gochi+Hand&display=swap");

    .gochi-hand-regular {
        font-family: "Gochi Hand", cursive;
        font-weight: 400;
        font-style: normal;
    }

    :global(body[data-grid-variant="moodboard"]) {
        --grid-color-1: rgba(83, 62, 37, 0.28);
        --grid-color-2: rgba(83, 62, 37, 0.09);
        background: radial-gradient(circle at top, #fff8ea 0%, #f3e5cd 45%, #ecddc0 100%)
            fixed !important;
        color: #231a13;
    }

    :global(body[data-grid-variant="moodboard"] .global-grid-bg) {
        display: none;
    }

    :global(body[data-grid-variant="moodboard"] .global-glow-bg) {
        --glow-radius: 560px;
        opacity: 1;
        background-size: 52px 52px;
    }

    :global(body[data-grid-variant="moodboard"] .site-footer) {
        background: rgba(243, 229, 205, 0.88);
        border-top: 1px solid rgba(93, 67, 38, 0.26);
    }

    .cambridge-page {
        width: 100%;
        padding: clamp(2.4rem, 4vh, 3.4rem) 0 11rem;
    }

    .page-shell {
        width: min(1490px, calc(100vw - 2.5rem));
        margin: 0 auto;
        display: grid;
        gap: clamp(2rem, 2.7vw, 2.9rem);
    }

    .panel {
        background: rgba(255, 250, 243, 0.84);
        border: 1px solid rgba(101, 75, 44, 0.28);
        border-radius: 22px;
        padding: clamp(1.55rem, 2.9vw, 2.8rem);
        box-shadow: 0 18px 35px rgba(86, 59, 29, 0.1);
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);
    }

    .panel-soft {
        background: rgba(255, 255, 255, 0.72);
        border: 1px solid rgba(117, 86, 52, 0.22);
        border-radius: 18px;
        padding: clamp(1.12rem, 1.65vw, 1.45rem);
    }

    .eyebrow,
    .meta,
    table thead th,
    .mono-line,
    .bank-row dt {
        font-family: "Space Mono", monospace;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        font-size: 0.73rem;
        color: rgba(70, 45, 20, 0.82);
    }

    h1,
    h2,
    h3,
    p,
    li,
    td,
    dd,
    th {
        color: #241912;
        font-family: "Poppins", sans-serif;
    }

    .hero {
        background:
            linear-gradient(125deg, rgba(255, 255, 255, 0.8), rgba(255, 235, 200, 0.78)),
            linear-gradient(35deg, rgba(255, 220, 171, 0.4), rgba(255, 247, 231, 0.65));
        padding: clamp(1.75rem, 3.1vw, 3.1rem);
    }

    .hero-grid {
        display: grid;
        grid-template-columns: 1.05fr 0.95fr;
        gap: clamp(1.2rem, 2.15vw, 2rem);
        align-items: center;
    }

    .hero-copy {
        display: grid;
        gap: 0.8rem;
        align-content: start;
        padding-block: 0.3rem;
    }

    h1 {
        font-size: clamp(1.8rem, 3.3vw, 3.05rem);
        margin: 0.15rem 0 0.35rem;
        line-height: 1.08;
    }

    .hero-date {
        margin: 0;
        color: rgba(65, 42, 19, 0.78);
        font-size: 0.9rem;
        font-family: "Space Mono", monospace;
        text-transform: uppercase;
        letter-spacing: 0.06em;
    }

    .hero-subtitle {
        margin: 0.15rem 0 0;
        font-size: clamp(1rem, 1.3vw, 1.15rem);
        line-height: 1.62;
        max-width: 66ch;
    }

    .hero-ask {
        margin: 0.25rem 0 0;
        font-size: clamp(1rem, 1.3vw, 1.15rem);
        line-height: 1.62;
        max-width: 66ch;
    }

    .hero-photo {
        display: grid;
        gap: 0.6rem;
        padding: 0.65rem;
        overflow: hidden;
    }

    .hero-photo img {
        width: 100%;
        height: 100%;
        max-height: 450px;
        object-fit: cover;
        border-radius: 14px;
        border: 1px solid rgba(109, 79, 48, 0.28);
    }

    .hero-photo figcaption {
        margin: 0;
    }

    .hero-actions {
        margin-top: 1.4rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.58rem 0.94rem;
        border: 1px solid rgba(87, 56, 26, 0.55);
        border-radius: 999px;
        text-decoration: none;
        color: #27150a;
        font-family: "Space Mono", monospace;
        font-size: 0.74rem;
        line-height: 1.2;
        transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
        background: rgba(255, 255, 255, 0.74);
        cursor: pointer;
    }

    .btn:hover,
    .btn:focus-visible {
        transform: translateY(-1px);
        box-shadow: 0 10px 18px rgba(89, 58, 29, 0.14);
        outline: none;
    }

    .btn-primary {
        background: #7a1b0f;
        color: #fff8f1;
        border-color: #7a1b0f;
    }

    .section {
        display: grid;
        gap: clamp(1.45rem, 1.9vw, 2rem);
    }

    .section-header {
        display: grid;
        gap: 0.6rem;
    }

    .section-header h2 {
        margin: 0;
        font-size: clamp(1.2rem, 2vw, 1.9rem);
        line-height: 1.22;
    }

    .watch-grid,
    .raising-grid,
    .support-layout,
    .bank-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: clamp(1.45rem, 2.2vw, 2.2rem);
        align-items: stretch;
    }

    .raising-grid {
        align-items: start;
    }

    .video-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1.1rem;
        padding: clamp(1.15rem, 2vw, 1.65rem);
        border-radius: 18px;
        border: 1px solid rgba(117, 86, 52, 0.22);
        background: rgba(255, 255, 255, 0.66);
    }

    .portrait-shell {
        width: min(390px, 100%);
        aspect-ratio: 9 / 16;
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid rgba(102, 74, 42, 0.22);
        background: transparent;
        box-shadow: 0 12px 26px rgba(41, 25, 11, 0.16);
    }

    .portrait-shell video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .video-buttons {
        width: min(390px, 100%);
        display: grid;
        gap: 0.65rem;
        justify-items: start;
    }

    .video-buttons .btn {
        width: auto;
    }

    .invitation-card,
    .offer-card,
    .audience-card,
    .why-card,
    .bank-card {
        height: 100%;
    }

    .why-card h3,
    .offer-card h3,
    .audience-card h3,
    .bank-card h3 {
        margin: 0 0 0.55rem;
        font-size: 1rem;
    }

    .why-card p,
    .offer-card p,
    .bank-row dd {
        margin: 0;
        line-height: 1.6;
    }

    .focus-list {
        margin: 0;
        padding-left: 1.05rem;
        display: grid;
        gap: 0.48rem;
    }

    .table-wrap {
        display: grid;
        gap: 0.65rem;
    }

    .cost-column {
        display: grid;
        gap: 1.05rem;
        align-content: start;
        justify-items: stretch;
        min-height: 100%;
    }

    .cost-card {
        width: 100%;
        display: grid;
        gap: 0.55rem;
        padding: 0.85rem;
    }

    .compact-table-wrap {
        border: 1px solid rgba(121, 93, 62, 0.28);
        border-radius: 14px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.88);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(121, 93, 62, 0.24);
        border-radius: 12px;
        overflow: hidden;
    }

    table thead th {
        text-align: left;
        padding: 0.9rem 0.95rem;
        border-bottom: 1px solid rgba(121, 93, 62, 0.24);
    }

    table tbody td {
        padding: 0.85rem 0.95rem;
        border-bottom: 1px solid rgba(121, 93, 62, 0.16);
        font-size: 0.95rem;
        line-height: 1.45;
        vertical-align: top;
    }

    table tbody tr:last-child td {
        border-bottom: none;
    }

    .total-row td {
        font-weight: 700;
    }

    .cost-table {
        border: none;
        border-radius: 0;
        background: transparent;
    }

    .cost-table thead th {
        background: rgba(118, 80, 43, 0.08);
        font-size: 0.72rem;
    }

    .cost-table tbody td:last-child,
    .cost-table thead th:last-child {
        text-align: right;
    }

    .cost-table .total-row td {
        background: rgba(122, 27, 15, 0.1);
        color: #6f190e;
        font-weight: 700;
    }

    .invitation-card {
