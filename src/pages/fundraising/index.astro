---
import BaseLayout from "../../layouts/BaseLayout.astro";
import FundraisingCard from "../../components/FundraisingCard.jsx";

const pageTitle = "Fundraising";

const projects = [
    {
        id: "cambridge",
        title: "Cambridge Data School Bursary",
        description:
            "Help me cover travel and living costs to attend the Cambridge Cultural Heritage Data School, where I've been awarded a full tuition bursary.",
        image: "https://upload.wikimedia.org/wikipedia/commons/b/b4/KingsCollegeChapelWest.jpg",
        goal: 1600,
        raised: 820,
        href: "/fundraising/cambridge-data-school",
    },
    {
        id: "bsa",
        title: "BSA Annual Conference 2026",
        description:
            "Presenting two peer-reviewed research papers (Poster & Roundtable) at the 75th Anniversary of the British Sociological Association Conference.",
        image: "https://www.birmingham.ac.uk/Images/academic-services/RPC21250x633.jpg",
        goal: 1200,
        raised: 420,
        href: "/fundraising/bsa-conference-2026",
    },
];
---

<BaseLayout title={pageTitle}>
    <div class="fundraising-hub">
        <header class="hub-header">
            <h1>Support My Work</h1>
            <p class="subtitle">
                Independent research, creative projects, and educational
                milestones. Your support helps turn these ambitious ideas into
                reality.
            </p>
        </header>

        <div class="projects-grid">
            {
                projects.map((project) => (
                    <FundraisingCard
                        client:visible
                        title={project.title}
                        description={project.description}
                        image={project.image}
                        goal={project.goal}
                        raised={project.raised}
                        href={project.href}
                    />
                ))
            }
        </div>
    </div>
</BaseLayout>

<style>
    .fundraising-hub {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem 6rem 1rem;
    }

    .hub-header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 5rem auto;
        padding-top: 3rem;
    }

    h1 {
        font-family: "Poppins", sans-serif;
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        letter-spacing: -1px;
        background: linear-gradient(to right, #fff, #a3a3a3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .subtitle {
        font-size: 1.2rem;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
        .projects-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
