---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getEducation } from "../lib/api";

const education = await getEducation();
const pageTitle = "Education";
---

<BaseLayout title={pageTitle}>
    <header class="page-header">
        <h1>Education</h1>
        <p class="section-intro">
            My academic journey and the institutions that have shaped my
            practice.
        </p>
    </header>

    <section class="education-list-section">
        <div class="awards-grid">
            {/* Header Row */}
            <div class="grid-row header-row">
                <div class="cell inst-cell">Institution</div>
                <div class="cell deg-cell">Degree & Course</div>
                <div class="cell focus-cell">Focus Area</div>
            </div>

            {/* Data Rows */}
            {
                education.map((edu) => (
                    <div class="grid-row content-row">
                        <div class="cell inst-cell">
                            <div class="inst-meta">
                                <span class="institution-title">
                                    {edu.institution}
                                </span>
                                <span class="location-year">
                                    {edu.location}
                                    {edu.location ? " " : ""}(
                                    {edu.start_year && edu.end_year
                                        ? `${edu.start_year} – ${edu.end_year}`
                                        : edu.end_year || edu.start_year || "—"}
                                    )
                                </span>
                            </div>
                        </div>

                        <div class="cell deg-cell">
                            <div class="degree-info">
                                <span class="degree-type">{edu.degree}</span>
                                {edu.course && (
                                    <span class="course-detail">
                                        {edu.course}
                                    </span>
                                )}
                            </div>
                        </div>

                        <div class="cell focus-cell">
                            <div class="focus-content">
                                {edu.specialization || edu.details}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>
</BaseLayout>

<style>
    .page-container {
        max-width: 1200px;
        margin: 0 auto;
        padding-bottom: 8rem;
    }

    .page-header {
        margin-bottom: 5rem;
        padding-top: 2rem;
        text-align: left;
    }

    h1 {
        font-family: var(--font-display);
        font-size: 3.5rem;
        font-weight: 600;
        letter-spacing: -0.02em;
        color: var(--text-primary);
        margin-bottom: 1rem;
    }

    .section-intro {
        font-family: var(--font-sans);
        font-size: 1.1rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0;
        line-height: 1.6;
    }

    /* Strictly Enforced Grid Table (Synced with Awards) */
    .awards-grid {
        display: flex;
        flex-direction: column;
        border: 1px solid var(--border-subtle);
        background: var(--bg-canvas);
    }

    .grid-row {
        display: grid;
        grid-template-columns: 350px 350px 1fr;
        border-bottom: 1px solid var(--border-subtle);
    }

    .grid-row:last-child {
        border-bottom: none;
    }

    .cell {
        padding: 2.5rem 2rem;
        display: flex;
        align-items: flex-start;
        border-right: 1px solid var(--border-subtle);
    }

    .cell:last-child {
        border-right: none;
    }

    /* Header Styling */
    .header-row {
        background: rgba(255, 255, 255, 0.03);
    }

    .header-row .cell {
        font-family: var(--font-display);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: var(--text-tertiary);
        padding: 1.25rem 2rem;
        font-weight: 600;
    }

    /* Column 1: Institution & Name/Year */
    .inst-meta {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .institution-title {
        font-family: var(--font-display);
        font-size: 1.3rem; /* Reduced for better balance */
        font-weight: 700;
        color: var(--text-primary);
        line-height: 1.2;
        letter-spacing: -0.01em;
        text-transform: capitalize;
    }

    .location-year {
        font-family: var(--font-ui);
        font-size: 0.9rem;
        color: var(--text-tertiary);
        font-weight: 400; /* Matched with course-detail */
        line-height: 1.4;
    }

    /* Column 2: Degree & Course */
    .degree-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .degree-type {
        font-family: var(--font-display);
        font-size: 1.1rem;
        font-weight: 500; /* Refined hierarchy */
        color: var(--text-primary);
        opacity: 0.9;
    }

    .course-detail {
        font-family: var(--font-ui);
        font-size: 0.9rem;
        color: var(--text-tertiary);
        line-height: 1.5;
        font-weight: 400;
    }

    /* Column 3: Focus Area */
    .focus-content {
        font-family: var(--font-ui);
        font-size: 0.9rem; /* Synced with course details */
        line-height: 1.7;
        color: var(--text-secondary);
        max-width: 60ch;
        padding-left: 1.5rem;
        border-left: 1px solid var(--border-subtle);
        position: relative;
    }

    .focus-content::before {
        content: "";
        position: absolute;
        left: -1px;
        top: 0;
        height: 2rem;
        width: 1px;
        background: var(--text-primary);
        opacity: 0.4;
    }

    .content-row:hover {
        background: rgba(255, 255, 255, 0.02);
    }

    /* Responsive Design */
    @media (max-width: 1100px) {
        .grid-row {
            grid-template-columns: 350px 250px 1fr;
        }

        .cell {
            padding: 2rem 1.5rem;
        }

        .institution-title {
            font-size: 1.3rem;
        }
    }

    @media (max-width: 900px) {
        .grid-row {
            grid-template-columns: 1fr;
            border: 1px solid var(--border-subtle);
            margin-bottom: 2rem;
            border-radius: 4px;
        }

        .awards-grid {
            border: none;
        }

        .header-row {
            display: none;
        }

        .cell {
            border-right: none;
            border-bottom: 1px solid var(--border-subtle);
            padding: 1.5rem;
        }

        .cell:last-child {
            border-bottom: none;
        }

        .inst-cell {
            background: rgba(255, 255, 255, 0.03);
        }
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
    }
</style>
