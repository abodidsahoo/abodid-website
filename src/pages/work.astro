---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getTimelineCards } from "../lib/api";

const pageTitle = "Work Experience";
const timelineData = await getTimelineCards();
---

<BaseLayout title={pageTitle}>
    <div class="page-container">
        <header class="page-header">
            <h1>Work Experience</h1>
            <p class="subtitle">
                My professional journey, roles, and the impact I've created
                along the way.
            </p>
        </header>

        <section class="work-list">
            {
                timelineData.map((item) => (
                    <article class="work-item">
                        <div class="year-column">
                            <span class="year">{item.year}</span>
                            <span class="period">
                                {item.half === "H1"
                                    ? "First Half"
                                    : item.half === "H2"
                                      ? "Second Half"
                                      : item.half}
                            </span>
                        </div>
                        <div class="content-column">
                            <h2 class="role-company">
                                <span class="role">{item.focus}</span>
                                {item.institutions && (
                                    <>
                                        <span class="at">@</span>
                                        <span class="company">
                                            {item.institutions}
                                        </span>
                                    </>
                                )}
                            </h2>

                            <p class="impact">{item.value_built}</p>

                            {item.brands_projects && (
                                <div class="skills-list">
                                    {item.brands_projects
                                        .split(",")
                                        .slice(0, 5)
                                        .map((skill) => (
                                            <span class="skill-tag">
                                                {skill.trim()}
                                            </span>
                                        ))}
                                </div>
                            )}
                        </div>
                    </article>
                ))
            }
        </section>
    </div>
</BaseLayout>

<style>
    .page-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: 4rem;
        padding-top: var(--space-lg);
    }

    .subtitle {
        font-size: 1.1rem;
        color: var(--text-secondary);
        margin-top: 0.5rem;
        max-width: 60ch;
    }

    .work-list {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        margin-bottom: 6rem;
    }

    .work-item {
        display: grid;
        grid-template-columns: 120px 1fr;
        gap: 2rem;
        align-items: flex-start;
        padding-bottom: 3rem;
        border-bottom: 1px solid var(--border-subtle);
    }

    .work-item:last-child {
        border-bottom: none;
    }

    /* Left Column: Year */
    .year-column {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .year {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        line-height: 1;
    }

    .period {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-tertiary);
        margin-top: 0.25rem;
    }

    /* Right Column: Content */
    .content-column {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .role-company {
        font-size: 1.25rem;
        font-weight: 500;
        margin: 0;
        line-height: 1.3;
        color: var(--text-primary);
    }

    .role {
        font-weight: 600;
    }

    .at {
        color: var(--text-tertiary);
        margin: 0 0.2rem;
        font-weight: 400;
    }

    .company {
        color: var(--text-secondary);
    }

    .impact {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--text-secondary);
        position: relative;
        padding-left: 1rem;
        border-left: 2px solid var(--accent-primary, #666);
    }

    .skills-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .skill-tag {
        font-size: 0.7rem;
        padding: 0.2rem 0.6rem;
        background: var(--bg-surface);
        border: 1px solid var(--border-subtle);
        border-radius: 100px;
        color: var(--text-secondary);
        white-space: nowrap;
    }

    /* Responsive */
    @media (max-width: 600px) {
        .work-item {
            grid-template-columns: 1fr;
            gap: 0.5rem;
        }

        .year-column {
            flex-direction: row;
            align-items: baseline;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .period {
            margin-top: 0;
        }

        .impact {
            padding-left: 0;
            border-left: none;
            /* Use a different visual indicator for impact on mobile if needed, or keep simple */
            font-style: italic;
            color: var(--text-primary);
            opacity: 0.9;
        }
    }
</style>
