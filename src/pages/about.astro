---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCVs } from "../lib/api";

const pageTitle = "About";

// Fetch CVs
const { artistCV, professionalCVs } = await getCVs();

const hubs = [
    {
        title: "Work Experience",
        link: "/work",
        icon: "→",
    },
    {
        title: "Curriculum Vitae",
        link: "https://jwipqbjxpmgyevfzpjjx.supabase.co/storage/v1/object/public/misc/cv/Abodid%20Sahoo%20-%20Photography%20&%20AI%20-%20CV.pdf",
        icon: "→",
    },
    {
        title: "Media Mentions",
        link: "/press",
        icon: "→",
    },
    {
        title: "Research Papers",
        link: "/research-papers",
        icon: "→",
    },
    {
        title: "Awards",
        link: "/awards",
        icon: "→",
    },
    {
        title: "Education",
        link: "/education",
        icon: "→",
    },
    {
        title: "Fundraising",
        link: "/fundraising",
        icon: "→",
    },
    {
        title: "Workshops",
        link: "/workshops",
        icon: "→",
    },
];

const competencies = [
    "Creative Technology & Interactive Media",
    "Photography & Film Production",
    "Digital Strategy & Community Growth",
    "Exhibition & Event Documentation",
    "Research & Academic Writing",
];

const clients = [
    "Globally Renowned Art Institutes",
    "Avant-Garde Design Studios",
    "Innovative Cultural Startups",
    "Independent Artists & Curators",
];
---

<BaseLayout title={pageTitle}>
    <div class="page-container">
        <header class="page-header">
            <h1>About Me</h1>
        </header>

        <section class="about-content">
            <div class="intro-group">
                <h2 class="intro-name">Hi, I am Abodid.</h2>
                <h3 class="intro-title">
                    I'm a creative technologist and researcher.
                </h3>
                <p class="intro-mission">
                    I help organizations document world-class exhibitions and
                    events, build meaningful relationships with key
                    stakeholders, and grow engaged communities.
                </p>
            </div>

            <div class="info-grid">
                <div class="info-column">
                    <h3 class="info-label">What I Do</h3>
                    <ul class="bullet-list">
                        {competencies.map((item) => <li>{item}</li>)}
                    </ul>
                </div>

                <div class="info-column">
                    <h3 class="info-label">Who I Work With</h3>
                    <ul class="bullet-list">
                        {clients.map((item) => <li>{item}</li>)}
                    </ul>
                </div>
            </div>

            <div class="why-section">
                <h3 class="info-label">Why do people love working with me</h3>
                <p class="intro-text">
                    My experience across art, design, and academia allows me to
                    craft innovative creative strategies and produce offbeat,
                    edgy, and highly impactful work.
                </p>
            </div>
        </section>

        <section class="hubs-section">
            <h3 class="section-label">Explore More</h3>
            <div class="hub-grid">
                {
                    hubs.map((item) => (
                        <a href={item.link} class="hub-card">
                            <div class="card-content">
                                <span class="card-title">{item.title}</span>
                                <span class="icon">{item.icon}</span>
                            </div>
                        </a>
                    ))
                }
            </div>
        </section>

        <section class="contact-section">
            <hr class="divider" />
            <div class="contact-wrapper">
                <h3>Contact</h3>
                <ul class="contact-list">
                    <li>
                        <a href="mailto:hello@abodid.com">hello@abodid.com</a>
                    </li>
                    <li>
                        <a href="https://github.com/abodidsahoo" target="_blank"
                            >GitHub</a
                        >
                    </li>
                    <li>
                        <a
                            href="https://uk.linkedin.com/in/abodidsahoo"
                            target="_blank">Linkedin</a
                        >
                    </li>
                    <li>
                        <a
                            href="https://www.instagram.com/abodid.sahoo"
                            target="_blank">Instagram</a
                        >
                    </li>
                    <li>
                        <a
                            href="https://twitter.com/abodidsahoo"
                            target="_blank">Twitter / X</a
                        >
                    </li>
                </ul>
            </div>
        </section>
    </div>
</BaseLayout>

<style>
    .page-container {
        max-width: 900px;
        margin: 0 auto;
        padding-bottom: 4rem;
    }

    .page-header {
        margin-bottom: 5rem;
        padding-top: 2rem;
        text-align: left;
    }

    h1 {
        font-family: var(--font-display);
        font-size: 3.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        letter-spacing: -0.02em;
        color: var(--text-primary);
    }

    .section-intro {
        font-family: var(--font-sans);
        font-size: 1.1rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0;
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
    }

    .about-content {
        margin-bottom: 5rem;
        max-width: 800px;
    }

    .intro-group {
        margin-bottom: 4rem;
    }

    .intro-name {
        font-family: var(--font-display);
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
        letter-spacing: -0.02em;
    }

    .intro-title {
        font-family: var(--font-display);
        font-size: 1.7rem;
        font-weight: 300;
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }

    .intro-mission {
        font-family: var(--font-sans); /* Unified Font */
        font-size: 1.25rem;
        line-height: 1.6;
        color: var(--text-primary);
        max-width: 700px;
    }

    .intro-text {
        font-family: var(--font-sans); /* Unified Font */
        font-size: 1rem;
        line-height: 1.6;
        color: var(--text-secondary);
        margin-top: 1rem;
    }

    .why-section {
        margin-top: 5rem;
        max-width: 700px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
    }

    .info-label {
        font-family: var(--font-sans); /* Unified Font */
        font-size: 1rem; /* Larger */
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 600; /* Bolder */
        color: var(--text-tertiary);
        margin-bottom: 1.5rem; /* More space */
        border-bottom: 1px solid var(--border-subtle);
        padding-bottom: 0.5rem;
    }

    .bullet-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .bullet-list li {
        position: relative;
        padding-left: 1.2rem;
        margin-bottom: 0.6rem;
        font-family: var(--font-sans);
        font-size: 1rem; /* Consistent size */
        color: var(--text-secondary);
        line-height: 1.5;
    }

    .bullet-list li::before {
        content: "•";
        position: absolute;
        left: 0;
        color: var(--accent-primary, #666); /* Or use red if preferred */
    }

    /* Hubs Section */
    .hubs-section {
        margin-bottom: 5rem;
    }

    .section-label {
        font-family: var(--font-sans); /* Unified */
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 600;
        color: var(--text-tertiary);
        margin-bottom: 2rem;
    }

    .hub-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1rem;
    }

    .hub-card {
        display: block;
        text-decoration: none;
        background: var(--bg-surface);
        border: 1px solid var(--border-subtle);
        padding: 1.5rem;
        border-radius: 4px; /* Sharper */
        transition: all 0.2s ease;
    }

    .hub-card:hover {
        border-color: var(--text-secondary);
        background: var(--bg-surface-hover, #111);
        transform: translateY(-2px);
    }

    .card-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-title {
        font-family: var(--font-sans);
        font-size: 1rem;
        font-weight: 500;
        color: var(--text-primary);
    }

    .icon {
        color: var(--text-tertiary);
        transition: transform 0.2s ease;
    }

    .hub-card:hover .icon {
        transform: translateX(4px);
        color: var(--text-primary);
    }

    /* Contact Section */
    .contact-section {
        margin-top: 2rem;
    }

    .divider {
        margin: 0 0 3rem 0;
        border: none;
        border-top: 1px solid var(--border-subtle);
    }

    .contact-wrapper h3 {
        font-family: var(--font-sans); /* Unified */
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 600;
        color: var(--text-tertiary);
        margin-bottom: 1.5rem;
    }

    .contact-list {
        list-style: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
    }

    .contact-list a {
        font-family: var(--font-ui);
        color: var(--text-primary);
        text-decoration: none;
        font-size: 1rem;
        border-bottom: 1px solid transparent; /* Prepare for hover */
        transition: border-bottom-color 0.2s;
    }

    .contact-list a:hover {
        border-bottom-color: var(--text-primary);
    }

    @media (max-width: 768px) {
        .info-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .contact-list {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
