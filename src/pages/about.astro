---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About";
---

<BaseLayout title={pageTitle}>
  <header class="page-header">
    <h1>About</h1>
  </header>

  <section class="about-content animation-fade-in">
    <div class="prose">
      <p class="lead">Hi, I am Abodid. I am a creative technologist.</p>

      <p>
        My work bridges the gap between traditional photography, cinematography,
        and sociological research. I am interested in the "Invisible
        Punctum"—the unseen emotional impact of images—and how AI interprets (or
        fails to interpret) human feeling.
      </p>

      <hr class="divider" />

      <h3>Contact</h3>
      <ul class="contact-list">
        <li><a href="mailto:hello@abodid.com">hello@abodid.com</a></li>
        <li>
          <a href="https://github.com/abodidsahoo" target="_blank">GitHub</a>
        </li>

        <li>
          <a href="https://uk.linkedin.com/in/abodidsahoo" target="_blank"
            >Linkedin</a
          >
        </li>

        <li>
          <a href="https://www.instagram.com/abodid.sahoo" target="_blank"
            >Instagram</a
          >
        </li>

        <li>
          <a href="https://twitter.com/abodidsahoo" target="_blank"
            >Twitter / X</a
          >
        </li>
      </ul>
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--space-lg);
    padding-top: var(--space-lg);
  }

  /* 
    Keep text line length readable (65-75 chars is ideal), 
    but allow it to align left with the header.
  */
  .about-content {
    max-width: 720px;
    /* No margin: auto here, so it aligns left */
  }

  .prose {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  .lead {
    font-size: 1.5rem;
    color: var(--text-primary);
    font-weight: 400;
    line-height: 1.4;
    margin-bottom: 2rem;
    font-family: var(--font-serif);
  }

  .divider {
    margin: 3rem 0;
    border: none;
    border-top: 1px solid var(--border-subtle);
  }

  .contact-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .contact-list a {
    color: var(--text-primary);
    border-bottom: 1px solid var(--border-subtle);
    padding-bottom: 2px;
  }

  .contact-list a:hover {
    border-bottom-color: var(--text-primary);
  }
</style>
