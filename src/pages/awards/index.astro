---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getAwards } from "../../lib/api";

const awards = await getAwards();
const pageTitle = "Awards & Recognition";
---

<BaseLayout title={pageTitle}>
    <div class="page-container">
        <header class="page-header">
            <h1>{pageTitle}</h1>
            <p class="section-intro">
                A selection of scholarships, grants, and awards that have
                supported my creative and academic journey.
            </p>
        </header>

        <section class="awards-list-section">
            <div class="awards-grid">
                {/* Header Row */}
                <div class="grid-row header-row">
                    <div class="cell year-cell">Year</div>
                    <div class="cell title-cell">Award / Honor</div>
                    <div class="cell desc-cell">Description</div>
                </div>

                {/* Data Rows */}
                {
                    awards.map((award) => (
                        <div class="grid-row content-row">
                            <div class="cell year-cell">
                                <span class="mono-text">{award.year}</span>
                            </div>

                            <div class="cell title-cell">
                                <div class="award-hierarchy">
                                    <span class="award-name">
                                        {award.title}
                                    </span>
                                    {award.organization && (
                                        <span class="org-name">
                                            {award.organization}
                                        </span>
                                    )}
                                </div>
                            </div>

                            <div class="cell desc-cell">
                                <p class="award-description">
                                    {award.description}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>
    </div>
</BaseLayout>

<style>
    .page-container {
        max-width: 1200px;
        margin: 0 auto;
        padding-bottom: 8rem;
    }

    .page-header {
        margin-bottom: 5rem;
        padding-top: 2rem;
        text-align: left;
    }

    h1 {
        font-family: var(--font-display);
        font-size: 3.5rem;
        font-weight: 600;
        letter-spacing: -0.02em;
        color: var(--text-primary);
        margin-bottom: 1rem;
    }

    .section-intro {
        font-family: var(--font-sans);
        font-size: 1.1rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0;
        line-height: 1.6;
    }

    /* Strictly Enforced Grid Table */
    .awards-grid {
        display: flex;
        flex-direction: column;
        border: 1px solid var(--border-subtle);
        background: var(--bg-canvas);
    }

    .grid-row {
        display: grid;
        grid-template-columns: 180px 350px 1fr;
        border-bottom: 1px solid var(--border-subtle);
    }

    .grid-row:last-child {
        border-bottom: none;
    }

    .cell {
        padding: 2.5rem 2rem;
        display: flex;
        align-items: flex-start;
        border-right: 1px solid var(--border-subtle);
    }

    .cell:last-child {
        border-right: none;
    }

    /* Header Styling */
    .header-row {
        background: rgba(255, 255, 255, 0.03);
    }

    .header-row .cell {
        font-family: var(--font-ui);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--text-tertiary);
        padding: 1.25rem 2rem;
        font-weight: 700;
    }

    /* Hierarchy & Typography */
    .mono-text {
        font-family: var(--font-ui);
        font-size: 1rem;
        color: var(--text-tertiary);
        font-weight: 500;
    }

    .award-hierarchy {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .award-name {
        font-family: var(--font-display);
        font-size: 1.35rem;
        font-weight: 700; /* Bold for hierarchy */
        color: var(--text-primary);
        line-height: 1.2;
    }

    .org-name {
        font-family: var(--font-ui);
        font-size: 1rem;
        color: var(--text-tertiary);
        font-weight: 400;
        opacity: 0.8;
    }

    .award-description {
        font-size: 1.05rem;
        line-height: 1.7;
        color: var(--text-secondary);
        margin: 0;
        max-width: 60ch;
    }

    /* Hover State */
    .content-row:hover {
        background: rgba(255, 255, 255, 0.02);
    }

    /* Responsive Design */
    @media (max-width: 1100px) {
        .grid-row {
            grid-template-columns: 140px 300px 1fr;
        }

        .cell {
            padding: 2rem 1.5rem;
        }
    }

    @media (max-width: 850px) {
        .awards-grid {
            border: none;
        }

        .header-row {
            display: none; /* Hide header on mobile for stacked layout */
        }

        .grid-row {
            grid-template-columns: 1fr;
            border: 1px solid var(--border-subtle);
            margin-bottom: 2rem;
            border-radius: 4px;
        }

        .cell {
            border-right: none;
            border-bottom: 1px solid var(--border-subtle);
            padding: 1.5rem;
        }

        .cell:last-child {
            border-bottom: none;
        }

        .year-cell {
            background: rgba(255, 255, 255, 0.03);
            padding: 0.75rem 1.5rem;
        }

        h1 {
            font-size: 3rem;
        }
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
    }
</style>
