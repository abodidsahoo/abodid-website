---
import BaseLayout from "../layouts/BaseLayout.astro";
import VisualSitemap from "../components/VisualSitemap.astro";

const title = "Sitemap";
const description = "The constellation of this digital space.";
---

<BaseLayout title={title}>
    <header class="page-header">
        <h1>The Map</h1>
        <p class="subtitle">{description}</p>
    </header>

    <div class="sitemap-container">
        <VisualSitemap />
    </div>
</BaseLayout>

<style>
    .page-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    .subtitle {
        color: var(--text-secondary);
        font-family: var(--font-serif);
        font-style: italic;
    }

    h1 {
        font-family: "Poppins", sans-serif;
        font-size: 3rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }
</style>
