---
import BaseLayout from "../layouts/BaseLayout.astro";
import ResearchFilter from "../components/ResearchFilter.jsx";
import { getResearchPapers } from "../lib/api";

const pageTitle = "Research Papers (Curated by Me)";
const papers = await getResearchPapers();
---

<BaseLayout title={pageTitle}>
    <header class="page-header">
        <h1>Curated Research Papers</h1>
        <p class="section-intro">
            This is my personal research repository on autoethnography,
            unrequited love, grief, death, and the messy, beautiful world of
            human emotions. I’ve been collecting these papers while studying
            over the last couple of years, and I’m still adding to it as my
            questions get sharper. If you’re into similar themes, feel free to
            explore, and reach out if you’d ever like to chat, collaborate, or
            do a podcast.
        </p>
    </header>

    <section class="research-content">
        <ResearchFilter client:load papers={papers} />
    </section>
</BaseLayout>

<style>
    .page-header {
        margin-bottom: 3rem;
        padding-top: 2rem;
        text-align: left;
    }

    h1 {
        font-family: "Poppins", sans-serif;
        font-size: 3rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }

    .section-intro {
        font-family: var(--font-sans);
        font-size: 1.1rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0;
        line-height: 1.6;
    }

    .research-content {
        padding-bottom: 4rem;
    }

    @media (max-width: 600px) {
        .page-header h1 {
            font-size: 2.5rem;
        }
    }
</style>
