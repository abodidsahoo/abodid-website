---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Services";
const description =
    "Commissioned visual storytelling for brands, editorials, and projects.";
---

<BaseLayout title={title}>
    <header class="page-header">
        <h1>Commissioning Vision</h1>
        <p class="subtitle">{description}</p>
    </header>

    <section class="content-section">
        <div class="service-grid">
            <div class="service-card">
                <h3>Editorial</h3>
                <p>Visual narratives for publications and digital media.</p>
            </div>
            <div class="service-card">
                <h3>Commercial</h3>
                <p>Brand identity and campaign photography.</p>
            </div>
            <div class="service-card">
                <h3>Portrait</h3>
                <p>Intimate and honest captures of the human depth.</p>
            </div>
        </div>

        <div class="contact-area">
            <p>Interested in collaborating?</p>
            <a href="/contact" class="cta-button">Initiate Project</a>
        </div>
    </section>
</BaseLayout>

<style>
    .page-header {
        margin-bottom: 4rem;
        max-width: 800px;
    }

    .subtitle {
        font-size: 1.2rem;
        color: var(--text-secondary);
        margin-top: 1rem;
    }

    .service-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .service-card {
        padding: 2rem;
        border: 1px solid var(--border-subtle);
        border-radius: 8px;
        transition: all 0.2s ease;
    }

    .service-card:hover {
        border-color: var(--text-primary);
        background: var(--bg-surface);
    }

    .service-card h3 {
        margin-bottom: 0.5rem;
    }

    .contact-area {
        text-align: center;
        padding-top: 2rem;
        border-top: 1px solid var(--border-subtle);
    }

    .cta-button {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.8rem 1.5rem;
        background: var(--text-primary);
        color: var(--bg-color);
        border-radius: 4px;
        font-weight: 500;
    }
</style>
