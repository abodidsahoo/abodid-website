---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getServices } from "../lib/services/content";
import type { ServiceItem } from "../lib/services/types";

const title = "Services";
const services = await getServices();

// Helper to get styling based on category
function getCategoryStyle(category: string, index: number) {
    const fallbackTones = ["tone-offer", "tone-skills", "tone-tools"];

    switch (category) {
        case "offer":
            return "tone-offer";
        case "skills":
            return "tone-skills";
        case "tools":
            return "tone-tools";
        default:
            return fallbackTones[index % fallbackTones.length];
    }
}
---

<BaseLayout title={title}>
    <div class="page-container">
        <header class="page-header">
            <h1>Services</h1>
            <p class="intro-text">
                Here's what I have to offer and the skills sets I have and the
                technical tools I am proficient in.
            </p>
        </header>

        <div class="services-grid-layout">
            {
                services.map((service, index) => {
                    const styleClass = getCategoryStyle(
                        service.category,
                        index,
                    );

                    return (
                        <div class={`service-box ${styleClass}`}>
                            <div class="box-header">
                                <h2>
                                    {service.title ||
                                        service.category.toUpperCase()}
                                </h2>
                            </div>
                            <div class="box-content">
                                {service.content && (
                                    <p class="service-desc">
                                        {service.content}
                                    </p>
                                )}

                                {service.items && service.items.length > 0 && (
                                    <ul
                                        class={`items-list ${service.category !== "offer" ? "two-col" : ""}`}
                                    >
                                        {service.items.map((item) => (
                                            <li>{item}</li>
                                        ))}
                                    </ul>
                                )}
                            </div>
                        </div>
                    );
                })
            }
        </div>

        <style>
            .page-container {
                max-width: 800px;
                margin: 0 auto;
                padding-bottom: 6rem;
            }

            .page-header {
                margin-bottom: 4rem;
                padding-top: var(--space-lg);
            }

            h1 {
                font-size: 3.5rem;
                margin: 0 0 1rem 0;
                font-weight: 700;
                letter-spacing: -0.02em;
            }

            .intro-text {
                font-size: 1.2rem;
                color: var(--text-secondary);
                max-width: 65ch;
                line-height: 1.6;
            }

            /* Services Box Layout */
            .services-grid-layout {
                display: flex;
                flex-direction: column;
                gap: 2rem; /* Spacing between each section */
            }

            .service-box {
                border-radius: 8px; /* Slightly curved */
                padding: 2.5rem;
                transition: transform 0.2s ease;
                font-family:
                    "Inconsolata", monospace; /* Explicitly requested font */
                color: #1f2937;
                box-shadow: 0 1px 0 rgba(15, 23, 42, 0.05);
            }

            .tone-offer {
                background: #edf4ff;
                border: 1px solid #ccdcf5;
            }

            .tone-skills {
                background: #fff2e8;
                border: 1px solid #efd4be;
            }

            .tone-tools {
                background: #eef8f0;
                border: 1px solid #cfe4d3;
            }

            .box-header {
                margin-bottom: 2rem;
                border-bottom: 1px solid rgba(31, 41, 55, 0.24); /* Softer but clearer separator */
                padding-bottom: 1rem;
                opacity: 1;
            }

            .box-header h2 {
                margin: 0;
                font-size: 1.4rem; /* Reduced to be more technical/clean */
                font-weight: 700;
                letter-spacing: 0.05em;
                text-transform: uppercase;
                color: #0f172a !important;
            }

            .service-desc {
                font-size: 1.15rem; /* Slightly larger for readability */
                margin-bottom: 2rem;
                line-height: 1.5;
                max-width: 60ch;
                font-weight: 400;
                color: #1f2937;
            }

            .items-list {
                display: flex;
                flex-direction: column;
                gap: 0.6rem; /* Tighter spacing for list */
                padding-left: 0;
                margin: 0;
                list-style: none; /* Remove default bullets to custom handle */
            }

            .items-list li {
                font-size: 1rem;
                line-height: 1.4;
                display: flex;
                gap: 0.75rem;
                color: #1f2937;
            }

            .items-list.two-col {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 0.8rem 3rem; /* More horizontal gap */
            }

            /* Custom bullet for list items */
            .items-list li::before {
                content: "â†’"; /* Arrow bullet */
                color: #334155;
                opacity: 0.75;
                font-weight: 300;
            }

            @media (max-width: 600px) {
                .items-list.two-col {
                    grid-template-columns: 1fr;
                }

                .service-box {
                    padding: 1.5rem;
                }

                h1 {
                    font-size: 2.5rem;
                }

                .box-header h2 {
                    font-size: 1.2rem;
                }
            }
        </style>
    </div></BaseLayout
>
