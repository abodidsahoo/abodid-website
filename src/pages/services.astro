---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getServices } from "../lib/services/content";
import type { ServiceItem } from "../lib/services/types";

const title = "Services";
const services = await getServices();

// Helper to get styling based on category
function getCategoryStyle(category: string) {
    switch (category) {
        case "offer":
            return "bg-white text-black border-subtle";
        case "skills":
            return "bg-red text-white border-transparent";
        case "tools":
            return "bg-black text-white border-transparent";
        default:
            return "bg-white text-black border-subtle";
    }
}
---

<BaseLayout title={title}>
    <div class="page-container">
        <header class="page-header">
            <h1>Services</h1>
            <p class="intro-text">
                Here's what I have to offer and the skills sets I have and the
                technical tools I am proficient in.
            </p>
        </header>

        <div class="services-grid-layout">
            {
                services.map((service) => {
                    const styleClass = getCategoryStyle(service.category);

                    return (
                        <div class={`service-box ${styleClass}`}>
                            <div class="box-header">
                                <h2>
                                    {service.title ||
                                        service.category.toUpperCase()}
                                </h2>
                            </div>
                            <div class="box-content">
                                {service.content && (
                                    <p class="service-desc">
                                        {service.content}
                                    </p>
                                )}

                                {service.items && service.items.length > 0 && (
                                    <ul
                                        class={`items-list ${service.category !== "offer" ? "two-col" : ""}`}
                                    >
                                        {service.items.map((item) => (
                                            <li>{item}</li>
                                        ))}
                                    </ul>
                                )}
                            </div>
                        </div>
                    );
                })
            }
        </div>

        <style>
            .page-container {
                max-width: 800px;
                margin: 0 auto;
                padding-bottom: 6rem;
            }

            .page-header {
                margin-bottom: 4rem;
                padding-top: var(--space-lg);
            }

            h1 {
                font-size: 3.5rem;
                margin: 0 0 1rem 0;
                font-weight: 700;
                letter-spacing: -0.02em;
            }

            .intro-text {
                font-size: 1.2rem;
                color: var(--text-secondary);
                max-width: 65ch;
                line-height: 1.6;
            }

            /* Services Box Layout */
            .services-grid-layout {
                display: flex;
                flex-direction: column;
                gap: 2rem; /* Spacing between each section */
            }

            .service-box {
                border-radius: 8px; /* Slightly curved */
                padding: 2.5rem;
                transition: transform 0.2s ease;
                font-family:
                    "Inconsolata", monospace; /* Explicitly requested font */
            }

            .bg-white {
                background: #fff;
                border: 1px solid var(--border-subtle);
                color: #000; /* Explicit black text */
            }

            .bg-red {
                background: #d93025;
                color: white;
            }

            .bg-black {
                background: #000;
                color: white;
            }

            .box-header {
                margin-bottom: 2rem;
                border-bottom: 1px solid currentColor; /* Add a subtle separator line */
                padding-bottom: 1rem;
                opacity: 0.9;
            }

            .box-header h2 {
                margin: 0;
                font-size: 1.4rem; /* Reduced to be more technical/clean */
                font-weight: 700;
                letter-spacing: 0.05em;
                text-transform: uppercase;
            }

            .service-desc {
                font-size: 1.15rem; /* Slightly larger for readability */
                margin-bottom: 2rem;
                line-height: 1.5;
                max-width: 60ch;
                font-weight: 400;
            }

            .items-list {
                display: flex;
                flex-direction: column;
                gap: 0.6rem; /* Tighter spacing for list */
                padding-left: 0;
                margin: 0;
                list-style: none; /* Remove default bullets to custom handle */
            }

            .items-list li {
                font-size: 1rem;
                line-height: 1.4;
                display: flex;
                gap: 0.75rem;
            }

            .items-list.two-col {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 0.8rem 3rem; /* More horizontal gap */
            }

            /* Custom bullet for list items */
            .items-list li::before {
                content: "â†’"; /* Arrow bullet */
                opacity: 0.6;
                font-weight: 300;
            }

            @media (max-width: 600px) {
                .items-list.two-col {
                    grid-template-columns: 1fr;
                }

                .service-box {
                    padding: 1.5rem;
                }

                h1 {
                    font-size: 2.5rem;
                }

                .box-header h2 {
                    font-size: 1.2rem;
                }
            }
        </style>
    </div></BaseLayout
>
