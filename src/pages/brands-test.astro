---
import BaseLayout from "../layouts/BaseLayout.astro";
import BrandShowcase from "../components/BrandShowcase";

const pageTitle = "Brands Test Page";
---

<BaseLayout title={pageTitle}>
    <div class="test-container">
        <header>
            <h1>Brand Logos Showcase</h1>
            <p>Testing the grid layout and flip animations.</p>
        </header>

        <section class="showcase-area">
            <BrandShowcase client:load />
        </section>
    </div>
</BaseLayout>

<style>
    .test-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 2rem;
    }
    header {
        text-align: center;
        margin-bottom: 4rem;
    }
    h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
    p {
        color: var(--text-secondary);
        font-size: 1.2rem;
    }
    .showcase-area {
        background: var(--bg-surface);
        border-radius: 20px;
        border: 1px solid var(--border-subtle);
        padding: 2rem;
        min-height: 400px;
    }
</style>
