        <!-- Layout Fixer script -->
        <script>
            // @ts-nocheck
            (() => {
                const WALL_ID = "t2-wf-wall-inner";
                const BTN_Z = 120;

                function normalizeFrame(frame) {
                    if (frame instanceof HTMLElement) {
                        frame.style.position = "relative";
                        frame.style.isolation = "isolate";
                    }
                }

                function normalizeButton(btn) {
                    if (btn instanceof HTMLElement) {
                        btn.style.zIndex = String(BTN_Z);
                        btn.style.pointerEvents = "auto";
                        btn.style.display = "inline-flex";
                        btn.style.visibility = "visible";
                    }
                }

                function fixTab2() {
                    const wall = document.getElementById(WALL_ID);
                    if (!wall) return;

                    wall.querySelectorAll(".wf-frame").forEach((frame) => {
                        normalizeFrame(frame);
                        frame
                            .querySelectorAll(".wf-comment-btn")
                            .forEach((btn) => normalizeButton(btn));
                    });
                }

                function boot() {
                    fixTab2();
                    const wall = document.getElementById(WALL_ID);
                    if (wall) {
                        new MutationObserver(() => fixTab2()).observe(wall, {
                            childList: true,
                            subtree: true,
                        });
                    }
                    document.addEventListener(
                        "click",
                        (e) => {
                            const target = e.target;
                            if (
                                target instanceof Element &&
                                target.closest('[data-tab="t2"]')
                            ) {
                                setTimeout(fixTab2, 0);
                                setTimeout(fixTab2, 150);
                            }
                        },
                        true,
                    );
                }

                if (document.readyState === "loading") {
                    addEventListener("DOMContentLoaded", boot);
                } else {
                    boot();
                }
            })();
        </script>

