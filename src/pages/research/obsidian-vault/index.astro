---
export const prerender = false; // Must be false for server-side auth check
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { getVaultTags, getVaultNotes } from "../../../lib/github";

// Configuration
const ITEMS_PER_PAGE = 24;

// Server-Side Logic
let error = "";
let allNotes = [];
let initialNotes = [];
let remainingNotes = [];
let tags = [];

// Always Fetch Data
try {
    const [tagsData, notesData] = await Promise.all([
        getVaultTags(),
        getVaultNotes(),
    ]);

    tags = tagsData || [];
    allNotes = notesData || [];
    
    // Split for Infinite Scroll
    initialNotes = allNotes.slice(0, ITEMS_PER_PAGE);
    remainingNotes = allNotes.slice(ITEMS_PER_PAGE);
} catch (e) {
    console.error("Error fetching vault data:", e);
    if (e instanceof Error) {
        error = e.message;
    } else {
        error = "Failed to fetch vault data from GitHub. Check server logs.";
    }
}

const pageTitle = "Obsidian Vault";
---

<BaseLayout title={pageTitle}>
    <!-- Load Fonts: Poppins (Weights 100-500) & Inconsolata & Space Mono -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@300;400;500;600&family=Poppins:wght@100;200;300;400;500&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

    <div class="vault-container">
        {/* --- UNLOCKED STATE (SPLIT VIEW) --- */}
        <section class="vault-view-split">
            <header class="vault-header-split">
                 <h1>Abodid's Vault</h1>
                 <p class="subtitle">Live sync from GitHub. {allNotes.length} notes, {tags.length} tags.</p>
                 {error && <p class="error-msg" style="text-align:center; margin-top:1rem;">{error}</p>}
            </header>
            
            {/* --- MOBILE: CHOICE SCREEN (Visible only on mobile start) --- */}
            <div id="mobile-choice-screen" class="mobile-only">
                <button class="choice-btn" data-target="notes">
                    <span class="icon">üìù</span>
                    <span class="label">Browse Notes</span>
                </button>
                <button class="choice-btn" data-target="tags">
                    <span class="icon">üè∑Ô∏è</span>
                    <span class="label">Browse Tags</span>
                </button>
            </div>

            {/* --- MOBILE: STICKY CONTROLS (Hidden initially) --- */}
            <div id="mobile-controls" class="mobile-sticky-header mobile-only hidden">
                <div class="segmented-control">
                    <button class="seg-btn active" data-view="notes">Notes</button>
                    <button class="seg-btn" data-view="tags">Tags</button>
                </div>
            </div>

            <div class="split-layout" id="vault-layout">
                {/* --- LEFT: NOTES LIST (Single Column Vertical, 50% Width) --- */}
                <div class="notes-column mobile-view-target">
                    <div class="notes-header-small desktop-only">
                        <h2>Notes</h2>
                    </div>
                    <div class="vault-list" id="notes-grid">
                        {initialNotes.length === 0 ? (
                            <div class="empty-state">
                                <p>No notes found. Check GitHub connection.</p>
                            </div>
                        ) : (
                            initialNotes.map((file) => (
                                <a href={`/research/obsidian-vault/${file.name.replace(".md", "")}`} class="note-card">
                                    <div class="note-info">
                                        <h3>{file.name.replace(".md", "").replace(/-/g, " ")}</h3>
                                    </div>
                                </a>
                            ))
                        )}
                    </div>
                    
                    {/* Sentinel for Infinite Scroll */}
                    {remainingNotes.length > 0 && (
                        <div id="scroll-sentinel" class="loading-indicator">
                            <span>Loading more notes...</span>
                        </div>
                    )}
                </div>

                {/* --- RIGHT: TAG CLOUD (50% Width) --- */}
                <aside class="tags-column mobile-view-target">
                    <div class="tags-header-small desktop-only">
                        <h2>Tags</h2>
                    </div>
                    <div class="tag-cloud-wrapper">
                        {tags.map((tag) => (
                            <a href={`/research/obsidian-vault/${tag.name.replace(".md", "")}`} class="vault-tag">
                                {tag.name.replace(".md", "").replace(/-/g, " ")}
                            </a>
                        ))}
                    </div>
                </aside>
            </div>
        </section>
    </div>
</BaseLayout>

{/* Client-Side Infinite Scroll Script */}
{remainingNotes.length > 0 && (
    <script define:vars={{ remainingNotes, ITEMS_PER_PAGE }}>
        /* ... existing scroll script ... */
        let currentNotes = remainingNotes;
        const grid = document.getElementById('notes-grid');
        const sentinel = document.getElementById('scroll-sentinel');

        const observer = new IntersectionObserver((entries) => {
            if (entries[0].isIntersecting && currentNotes.length > 0) {
                loadMore();
            }
        }, { rootMargin: '200px' });

        if (sentinel) observer.observe(sentinel);

        function loadMore() {
            const batch = currentNotes.slice(0, ITEMS_PER_PAGE);
            currentNotes = currentNotes.slice(ITEMS_PER_PAGE);

            const fragment = document.createDocumentFragment();
            batch.forEach((file) => {
                const a = document.createElement('a');
                a.href = `/research/obsidian-vault/${file.name.replace(".md", "")}`;
                a.className = 'note-card fade-in';
                
                a.innerHTML = `
                    <div class="note-info">
                        <h3>${file.name.replace(".md", "").replace(/-/g, " ")}</h3>
                    </div>
                `;
                fragment.appendChild(a);
            });
            
            grid.appendChild(fragment);

            if (currentNotes.length === 0) {
                sentinel.style.display = 'none';
                observer.disconnect();
            }
        }
    </script>
)}

<script>
    // MOBILE IA LOGIC
    document.addEventListener('DOMContentLoaded', () => {
        const isMobile = window.matchMedia("(max-width: 1100px)").matches;
        if (!isMobile) return;

        const choiceScreen = document.getElementById('mobile-choice-screen');
        const mobileControls = document.getElementById('mobile-controls');
        const layout = document.getElementById('vault-layout');
        const notesCol = document.querySelector('.notes-column');
        const tagsCol = document.querySelector('.tags-column');
        
        // Initial State: Show Choice, Hide Layout
        if(choiceScreen) choiceScreen.style.display = 'flex';
        if(layout) layout.style.display = 'none';

        function switchView(view) {
            // Hide Choice
            if(choiceScreen) choiceScreen.style.display = 'none';
            
            // Show Controls & Layout
            if(mobileControls) mobileControls.classList.remove('hidden');
            if(layout) layout.style.display = 'block'; // Or flex/grid? Split-layout has grid.

            // Toggle Columns
            if (view === 'notes') {
                if(notesCol) notesCol.style.display = 'block';
                if(tagsCol) tagsCol.style.display = 'none';
                updateSegButtons('notes');
            } else {
                if(notesCol) notesCol.style.display = 'none';
                if(tagsCol) tagsCol.style.display = 'block';
                updateSegButtons('tags');
            }
        }

        function updateSegButtons(activeView) {
            const btns = document.querySelectorAll('.seg-btn');
            btns.forEach(btn => {
                if(btn.dataset.view === activeView) btn.classList.add('active');
                else btn.classList.remove('active');
            });
        }

        // Choice Buttons
        document.querySelectorAll('.choice-btn').forEach(btn => {
            btn.addEventListener('click', () => switchView(btn.dataset.target));
        });

        // Segmented Controls
        document.querySelectorAll('.seg-btn').forEach(btn => {
            btn.addEventListener('click', () => switchView(btn.dataset.view));
        });
    });
</script>

<style is:global>
    /* VARIABLES */
    :root {
        --vault-bg: #0f0f10;
        --vault-text: #e0e0e0;
        --vault-border: #333;
    }

    .vault-container {
        max-width: 96vw;
        margin: 0 auto;
        padding: 1rem 2rem;
        min-height: 80vh;
    }

    /* --- LAYOUT GRID: 50/50 SPLIT --- */
    .split-layout {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Big Notes, Small Tags */
        gap: 0rem; /* Large gap between the two main columns */
        margin-top: 2rem;
        align-items: start;
        border-top: 1px solid var(--border-subtle);
        padding-top: 3rem;
    }
    
    @media (max-width: 1100px) {
        .split-layout {
            grid-template-columns: 1fr;
            gap: 3rem;
            display: none; /* Controlled by JS */
        }
        .tags-column {
            border-top: none !important;
            padding-top: 2rem;
            width: 100%;
            border-left: none !important;
            padding-left: 0 !important;
        }
        .notes-column {
            border-right: none !important;
            padding-right: 0 !important;
        }
        
        .desktop-only { display: none; }
        
        /* Mobile Choice Screen */
        .mobile-only { display: flex; }
        #mobile-choice-screen {
            flex-direction: column;
            gap: 1rem;
            margin: 4rem 0;
        }
        
        .choice-btn {
            background: var(--bg-surface);
            border: 1px solid var(--border-subtle);
            padding: 2rem;
            border-radius: 12px;
            display: flex;
            align-items: center;
            gap: 1.5rem;
            cursor: pointer;
            width: 100%;
            transition: all 0.2s;
        }
        .choice-btn:active { background: var(--border-subtle); }
        .choice-btn .icon { font-size: 2rem; }
        .choice-btn .label { font-family: 'Poppins',sans-serif; font-size: 1.2rem; font-weight: 500; color: var(--text-main); }

        /* Sticky Control */
        .mobile-sticky-header {
            position: sticky;
            top: 0px; /* Adjust for fixed header? */
            z-index: 100;
            background: var(--vault-bg);
            padding: 1rem 0;
            border-bottom: 1px solid var(--border-subtle);
            width: 100%;
        }
        .hidden { display: none !important; }
        
        .segmented-control {
            display: flex;
            background: var(--bg-surface);
            border-radius: 8px;
            padding: 4px;
            width: 100%;
        }
        
        .seg-btn {
            flex: 1;
            background: transparent;
            border: none;
            padding: 0.6rem;
            border-radius: 6px;
            color: var(--text-tertiary);
            font-weight: 500;
            cursor: pointer;
        }
        .seg-btn.active {
            background: var(--vault-border); /* Highlight */
            color: white;
        }
    }
    
    /* Default Hide Mobile Elements on Desktop */
    .mobile-only { display: none; }
    .desktop-only { display: block; }

    /* NOTES COLUMN */
    .notes-column {
        min-width: 0;
        border-right: 1px solid var(--border-subtle);
        /* 1. NARROWER NOTES: Huge padding on the right to keep away from center */
        padding-right: 9rem; 
    }

    /* TAGS COLUMN */
    .tags-column {
        /* Default 1fr from grid */
        padding-left: 6rem;
    }
    
    .notes-header-small h2, .tags-header-small h2 {
        font-size: 1.2rem;
        text-transform: uppercase;
        color: var(--text-tertiary);
        letter-spacing: 1px;
        margin-bottom: 2rem;
    }

    /* VERTICAL LIST FOR NOTES */
    .vault-list {
        display: flex;
        flex-direction: column;
        /* 2. COMPACT SPACING: Reduced gap */
        gap: 1.2rem; 
    }

    /* SHARED HEADER */
    .vault-header, .vault-header-split {
        text-align: center;
        margin-bottom: 2rem;
    }
    
    .vault-header-split {
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border-subtle);
    }

    h1 {
        font-family: "Space Mono", monospace;
        letter-spacing: -2px;
        margin-bottom: 0.5rem;
    }
    
    .vault-header h1 { font-size: 3rem; }
    .vault-header-split h1 { font-size: 2.5rem; }

    .subtitle {
        color: var(--text-secondary);
        font-size: 1.1rem;
    }

    /* --- COMPONENTS --- */

    /* Locked State */
    .pitch-content, .login-form-wrapper {
        max-width: 600px;
        margin: 0 auto 3rem auto;
        text-align: center;
    }
    
    .login-form-wrapper {
        padding: 3rem;
        background: var(--bg-surface);
        border: 1px solid var(--border-subtle);
        border-radius: 16px;
        max-width: 500px; /* Slightly tighter container */
        margin: 0 auto 3rem auto;
    }
    
    .login-label {
        font-family: 'Poppins', sans-serif;
        font-size: 1.8rem; /* Much bigger */
        font-weight: 800; /* Extra bold */
        letter-spacing: -0.5px;
        margin-bottom: 2rem;
        color: var(--text-main);
        text-transform: uppercase;
    }
    
    .login-form { 
        display: flex; 
        flex-direction: column; /* Stacked */
        gap: 1rem; 
        align-items: center;
    }

    .login-form input {
        width: 100%;
        padding: 1rem 1.2rem;
        border: 1px solid var(--border-subtle);
        background: #000; /* Darker input background */
        color: #fff;
        border-radius: 8px;
        font-size: 1rem;
        text-align: center; /* Centered input text */
        font-family: 'Space Mono', monospace;
        transition: all 0.3s ease;
    }
    
    .login-form input:focus {
        border-color: #fff;
        outline: none;
        box-shadow: 0 0 0 2px rgba(255,255,255,0.2);
    }
    
    .btn-unlock {
        width: 100%; /* Full width button */
        background: #fff;
        color: #000;
        font-weight: 800;
        font-size: 1rem;
        text-transform: uppercase;
        padding: 1.2rem;
        border-radius: 8px;
        letter-spacing: 1px;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .btn-unlock:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255,255,255,0.2);
        opacity: 1;
    }

    /* Tags: PILL SHAPE + FLOW */
    .tag-cloud-wrapper {
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem; /* Relaxed gap */
    }
    
    .vault-tag {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem; /* Slightly larger pills */
        background: transparent;
        border: 1px solid var(--border-subtle);
        border-radius: 50px; 
        font-size: 0.85rem; 
        color: var(--text-secondary);
        font-family: 'Poppins', sans-serif; 
        font-weight: 300; 
        text-decoration: none;
        cursor: pointer;
        transition: all 0.2s;
        line-height: 1;
    }
    
    .vault-tag:hover {
        border-color: var(--text-main);
        color: var(--text-main);
        background: var(--bg-surface-hover);
    }

    /* NOTE CARD */
    
    .note-card {
        display: block; 
        /* 3. COMPACT CARD: Reduced padding */
        padding: 1.2rem; 
        border-radius: 8px; 
        text-decoration: none;
        color: #e0e0e0; 
        transition: transform 0.2s, background 0.2s;
        border: 1px solid var(--border-subtle); 
        background: transparent;
        width: 100%;
        margin-bottom: 0; 
    }

    .note-card:hover {
        transform: translateX(4px); 
        background: rgba(255, 255, 255, 0.03); 
        border-color: var(--text-secondary);
    }
    
    .note-info h3 {
        font-family: 'Poppins', sans-serif;
        font-weight: 500; 
        /* 4. TYPOGRAPHY: Smaller, Darker */
        font-size: 1rem; 
        margin: 0;
        color: #8a8a8a; /* Darker/Greyer */
        text-transform: capitalize;
        line-height: 1.3;
    }

    /* Animation */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .fade-in { animation: fadeIn 0.3s ease-out forwards; }
    
    .error-msg { color: #ff6b6b; margin-top: 1rem; }
    .hint-text { margin-top: 1rem; font-size: 0.8rem; color: var(--text-tertiary); }
    
    .loading-indicator {
        margin-top: 2rem;
        text-align: center;
        color: var(--text-tertiary);
        font-family: 'Space Mono', monospace;
        grid-column: 1 / -1;
        font-size: 0.8rem;
    }
</style>
