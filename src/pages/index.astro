---
export const prerender = false;
import BaseLayout from "../layouts/BaseLayout.astro";
import PhotographyCard from "../components/PhotographyCard.astro";
import { getFeaturedPhotography, getRecentPosts } from "../lib/api";

import InteractiveTags from "../components/InteractiveTags";
import {
  featuredPhotography as mockPhotography,
  recentPosts as mockRecent,
} from "../utils/mockData";

const pageTitle = "Home";

// Helper to safely fetch data
const safeFetch = async (fn, fallback) => {
  try {
    return await fn();
  } catch (e) {
    console.error("Data fetch failed:", e);
    return fallback;
  }
};

// Fetch data from Supabase with Fallback
const featuredPhotography = (
  await safeFetch(getFeaturedPhotography, mockPhotography)
).slice(0, 1);
const recentPosts = (await safeFetch(getRecentPosts, mockRecent)).slice(0, 3);
---

<BaseLayout title={pageTitle}>
  <!-- Hero Section -->
  <section class="hero-section">
    <InteractiveTags client:load />
    <div class="hero-content">
      <h1 class="hero-title">
        Hi, I am Abodid. <br />
        My life revolves around... <br />
        <span id="typewriter-text" class="typing-text"></span><span
          class="typewriter-cursor"></span>
      </h1>
      <p class="hero-subtitle">
        With over 8+ years of expereince in photography, film and interactive
        media, I design authentic creative experinces for brands and
        organizations working in the culture and technology space, turning
        audience into loyal fans.
      </p>
    </div>
  </section>

  <!-- Featured Work -->
  <section class="section">
    <div class="section-header">
      <h2>Photography</h2>
      <a href="/photography" class="link-arrow">View All</a>
    </div>

    <div class="grid-3">
      {
        featuredPhotography.map((project) => (
          <PhotographyCard
            title={project.title}
            category={
              Array.isArray(project.category)
                ? project.category[0]
                : project.category
            }
            image={project.image}
            href={project.href}
          />
        ))
      }
    </div>
  </section>

  <!-- Journal/Research Split -->
  <section class="section split-section">
    <div class="column">
      <div class="section-header">
        <h2>Blog</h2>
        <a href="/blog" class="link-arrow">Read all</a>
      </div>
      <ul class="journal-list">
        {
          recentPosts.map((post) => (
            <li>
              <a href={post.href} class="journal-item">
                <span class="title">{post.title}</span>
                <span class="date">{post.date}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="column">
      <div class="section-header">
        <h2>Research</h2>
        <a href="/research" class="link-arrow">View Research</a>
      </div>
      <div class="code-preview">
        <p class="text-secondary">
          I am currently building
          <a
            href="https://abodid.com/research/invisible-punctum"
            target="_blank"
            rel="noopener noreferrer"
            style="text-decoration: underline"
          >
            Invisible Punctums</a
          > , a web-based interactive research experience that examines images, culture,
          bias, and the limits of AI systems.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
