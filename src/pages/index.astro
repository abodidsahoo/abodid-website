---
export const prerender = false;
import BaseLayout from "../layouts/BaseLayout.astro";
import PhotographyCard from "../components/PhotographyCard.astro";
import { getFeaturedPhotography, getRecentPosts } from "../lib/api";

import {
  featuredPhotography as mockPhotography,
  recentPosts as mockRecent,
} from "../utils/mockData";

import VibeCheckWidget from "../components/VibeCheckWidget";
import InteractiveTags from "../components/InteractiveTags";
import Showreel from "../components/Showreel.astro";

import PhotoCarousel from "../components/PhotoCarousel.astro";
import NavigationCards from "../components/NavigationCards.astro";
import BrandFilmStrip from "../components/BrandFilmStrip";

const pageTitle = "Home";
// Helper to safely fetch data
const safeFetch = async (fn, fallback) => {
  try {
    return await fn();
  } catch (e) {
    console.error("Data fetch failed:", e);
    return fallback;
  }
};

// Fetch data from Supabase with Fallback
const featuredPhotography = await safeFetch(
  getFeaturedPhotography,
  mockPhotography,
);
const recentPosts = (await safeFetch(getRecentPosts, mockRecent)).slice(0, 3);
---

<BaseLayout title={pageTitle}>
  <!-- Hero Section -->
  <section class="hero-section">
    <InteractiveTags client:load />
    <!-- Gamification Widget (Vibe Check) - Repositioned to top right -->
    <div class="vibe-check-wrapper">
      <VibeCheckWidget client:only="react" />
    </div>

    <div class="hero-content">
      <h1 class="hero-title">
        Hi, I am Abodid. <br />
        My life revolves around... <br />
        <span id="typewriter-text" class="typing-text"></span>
      </h1>
    </div>
    <div class="hero-hint">
      keep hovering around for a surprise before you scroll down ...
    </div>
  </section>
  <!-- Introduction Section -->
  <section class="section intro-section">
    <div class="intro-content">
      <p>
        With over 8+ years of expereince in photography, film and interactive
        media, I design authentic creative experiences for brands and
        organizations working in the culture and technology space.
      </p>
    </div>
  </section>

  <!-- Navigation Cards -->
  <section class="section">
    <NavigationCards />
  </section>

  <!-- Brand Film Strip -->
  <section class="section">
    <BrandFilmStrip client:only="react" />
  </section>

  <!-- Showreel Section -->
  <Showreel />

  <!-- Massive Spacer 3 (Showreel to Featured) -->
  <div style="height: 20vh; width: 100%;" aria-hidden="true"></div>

  <!-- Featured Work -->
  <!-- Featured Work (Infinite Scroll) -->
  <section class="section">
    <div class="section-header">
      <h2>Some of my most loved photo stories</h2>
      <a href="/photography" class="link-arrow">View All</a>
    </div>

    <!-- Contained Carousel Row 1 (Left) -->
    <PhotoCarousel projects={featuredPhotography} direction="left" />

    <!-- Spacer between rows -->
    <div style="height: 2rem;"></div>

    <!-- Contained Carousel Row 2 (Right) -->
    <PhotoCarousel
      projects={[...featuredPhotography].reverse()}
      direction="right"
    />
  </section>

  <!-- Blog Section -->
  <section class="section">
    <div class="section-header">
      <h2>Most Read Articles</h2>
      <a href="/blog" class="link-arrow">Read All</a>
    </div>

    <div class="blog-list">
      {
        recentPosts.map((post) => (
          <a href={post.href} class="blog-card group">
            <div class="blog-image-wrapper">
              <img src={post.image} alt={post.title} loading="lazy" />
            </div>
            <div class="blog-content">
              <div class="blog-meta">
                <span class="blog-date">{post.date}</span>
                {post.category && (
                  <span class="blog-category">
                    /{" "}
                    {Array.isArray(post.category)
                      ? post.category[0]
                      : post.category}
                  </span>
                )}
              </div>
              <h3 class="blog-title">{post.title}</h3>
              <div class="blog-link">Read Article →</div>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</BaseLayout>

