    display: flex;
    flex-direction: column; /* Stack vertically */
    justify-content: center; /* Center content vertically */
    margin-bottom: var(--space-xl);
    position: relative; /* Essential for InteractiveTags containment */
    padding-top: var(--space-l); /* Give some top space */
    padding-bottom: var(--space-2xl);
    isolation: isolate; /* Create stacking context for pseudo */
