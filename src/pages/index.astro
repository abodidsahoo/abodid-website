<script>
  const phrases = [
    "Images, Code & Culture.",
    "Design & Technology.",
    "Writing & Storytelling.",
    "Travel, Fashion & Music.",
    "Photography, Film & Art.",
    "AI, Sociology & Research.",
  ];

  // Pastel / Soft Palette (Off-white, Lilac, Beige, Soft Red, etc.)
  // We want to avoid pure white.
  /* 
    User Provided Palette:
    CINNAMON SATIN: #D35E7F
    MANZ: #D7E97B
    MAX BLUE PURPLE: #A999EB
    BABY BLUE EYES: #9BCDEF
  */
  const colors = [
    "#D35E7F", // Cinnamon Satin
    "#D7E97B", // Manz
    "#A999EB", // Max Blue Purple
    "#9BCDEF", // Baby Blue Eyes
  ];

  const typingSpeed = { min: 40, max: 100 };
  const backspaceSpeed = { min: 30, max: 50 };
  const pauseEnd = 2000; // Longer pause to read
  const pauseStart = 500;

  const textElement = document.getElementById("typewriter-text");

  let phraseIndex = 0;
  let charIndex = 0;
  let isDeleting = false;

  // We need to maintain the HTML structure so we don't break the color spans
  // Current phrase state
  let currentWordIndex = 0;
  let currentWordChars = "";
  // We'll pre-calculate the colored HTML for the current phrase to make "typing" easier?
  // Or type raw text and wrap? No, we need colors.
  // approach: The content of #typewriter-text will be a list of <span>word</span>.
  // But typing effect needs to reveal characters one by one.

  // Let's pre-assign colors to words for the current phrase.
  let currentPhraseObjects = []; // [{ text: "Images,", color: "#..." }, ...]

  function parsePhrase(phrase) {
    const words = phrase.split(" ");

    // "Bag Shuffle" logic to ensure strictly unique colors for the entire line
    // Since our palette has 6 colors and most phrases are <= 6 words,
    // we can just shuffle the palette and take the first N colors.
    // This guarantees NO repeats in the line.

    let phraseColors = [...colors];

    // Fisher-Yates shuffle
    for (let i = phraseColors.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [phraseColors[i], phraseColors[j]] = [phraseColors[j], phraseColors[i]];
    }

    // If the phrase is longer than the palette (unlikely with current data, but possible),
    // we extend the color list while maintaining adjacency uniqueness.
    while (phraseColors.length < words.length) {
      let nextBatch = [...colors];
      // Shuffle next batch
      for (let i = nextBatch.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [nextBatch[i], nextBatch[j]] = [nextBatch[j], nextBatch[i]];
      }
      // Ensure boundary check
      if (nextBatch[0] === phraseColors[phraseColors.length - 1]) {
        // Swap first with last to break repetition
        [nextBatch[0], nextBatch[nextBatch.length - 1]] = [
          nextBatch[nextBatch.length - 1],
          nextBatch[0],
        ];
      }
      phraseColors = phraseColors.concat(nextBatch);
    }

    return words.map((word, i) => {
      return {
        text: word + " ", // Include space
        color: phraseColors[i],
      };
    });
  }
  function renderText() {
    if (!textElement) return;

    // We render up to charIndex of the flattened phrase
    // But we need to wrap them in spans based on parsing

    let charCount = 0;
    let html = "";

    for (let obj of currentPhraseObjects) {
      if (charCount >= charIndex) break;

      const remaining = charIndex - charCount;
      const textToDisplay = obj.text.substring(0, remaining);

      html += `<span style="color: ${obj.color}">${textToDisplay}</span>`;

      charCount += obj.text.length;
      if (charCount > charIndex) break; // We are in the middle of this word
    }

    textElement.innerHTML = html;
  }

  function getTotalLength() {
    return currentPhraseObjects.reduce((acc, obj) => acc + obj.text.length, 0);
  }

  function type() {
    if (!textElement) return;

    // Initialize phrase if needed
    if (charIndex === 0 && !isDeleting) {
      currentPhraseObjects = parsePhrase(phrases[phraseIndex]);
    }

    const totalLen = getTotalLength();
    let speed =
      Math.random() * (typingSpeed.max - typingSpeed.min) + typingSpeed.min;

    if (isDeleting) {
      charIndex--;
      renderText();
      speed =
        Math.random() * (backspaceSpeed.max - backspaceSpeed.min) +
        backspaceSpeed.min;
    } else {
      charIndex++;
      renderText();
    }

    if (!isDeleting && charIndex === totalLen) {
      isDeleting = true;
      setTimeout(type, pauseEnd);
    } else if (isDeleting && charIndex === 0) {
      isDeleting = false;
      phraseIndex = (phraseIndex + 1) % phrases.length;
      setTimeout(type, pauseStart);
    } else {
      setTimeout(type, speed);
    }
  }

  setTimeout(type, 1000);

  // Scroll fade for hero hint
  // Ensure we run this after DOM is ready or immediately if already ready
  function initHintFade() {
    const heroHint = document.querySelector(".hero-hint");
    if (!heroHint) return;

    const updateOpacity = () => {
      const scrollY = window.scrollY;
      // Vanish quickly (within 50px)
      const fadeThreshold = 50;
      // Initial opacity in CSS is 0.8
      const newOpacity = Math.max(0, 0.8 - scrollY / fadeThreshold);
      heroHint.style.opacity = newOpacity.toString();
    };

    // Initial check
    updateOpacity();

    // Update on scroll
    window.addEventListener("scroll", updateOpacity, { passive: true });
  }

  // Run init
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initHintFade);
  } else {
    initHintFade();
  }

  // Mouse tracking moved to BaseLayout (Global)
  // initGridGlow removed

  // Scroll fade for Vibe Check Widget (Secret Lab block)
  function initVibeCheckFade() {
    const vibeCheck = document.querySelector(".vibe-check-wrapper");
    if (!vibeCheck) return;

    const updateOpacity = () => {
      const scrollY = window.scrollY;
      const windowHeight = window.innerHeight;

      // Start fading after a small scroll
      const startFade = 50;
      // End fading when we are near the showreel (approx 1.2 screen heights down)
      const endFade = windowHeight * 1.2;

      let opacity = 1;
      if (scrollY > startFade) {
        const progress = (scrollY - startFade) / (endFade - startFade);
        opacity = Math.max(0, 1 - progress);
      }

      (vibeCheck as HTMLElement).style.opacity = opacity.toString();

      if (opacity <= 0) {
        (vibeCheck as HTMLElement).style.visibility = "hidden";
      } else {
        (vibeCheck as HTMLElement).style.visibility = "visible";
      }
    };

    window.addEventListener("scroll", updateOpacity, { passive: true });
    updateOpacity(); // Initial check
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", () => {
      // initGridGlow removed
      initVibeCheckFade();
      initHintFade(); // Ensure hint fade is also called
    });
  } else {
    // initGridGlow removed
    initVibeCheckFade();
    initHintFade();
  }
</script>
