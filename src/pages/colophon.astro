---
import BaseLayout from "../layouts/BaseLayout.astro";
import ColophonInterface from "../components/ColophonInterface.jsx";
---

<BaseLayout
    title="Colophon // System Specs"
    description="Technical specifications and design philosophy."
>
    <div class="colophon-page-container">
        <header class="cmd-header">
            <h1 class="cmd-title">
                System Status: <span class="status-ok">OPERATIONAL</span>
            </h1>
            <p class="cmd-subtitle">ab-OS v1.0 // Architecture & Design</p>
        </header>

        <ColophonInterface client:load />

        <footer class="cmd-footer">
            <p>Build v0.0.1 // Generated by Antigravity</p>
        </footer>
    </div>
</BaseLayout>

<style>
    .colophon-page-container {
        padding: 2rem 0;
    }

    .cmd-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .cmd-title {
        font-family: "Inconsolata", monospace;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .status-ok {
        color: #00ff9d; /* Sci-fi green */
        text-shadow: 0 0 10px rgba(0, 255, 157, 0.5);
        animation: pulse 2s infinite;
    }

    .cmd-subtitle {
        font-family: "Inconsolata", monospace;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        opacity: 0.7;
        color: var(--text-secondary);
    }

    .cmd-footer {
        margin-top: 5rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border-subtle);
        font-family: "Inconsolata", monospace;
        font-size: 0.8rem;
        text-align: center;
        opacity: 0.5;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--text-tertiary);
    }

    @keyframes pulse {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
        100% {
            opacity: 1;
        }
    }
</style>
