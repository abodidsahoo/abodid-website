---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Films";
---
<BaseLayout title={pageTitle}>
  <h1>Films</h1>
  <p class="page-intro">Short films and video experiments.</p>
  
  <div class="film-grid">
     <div class="film-item">
       <div class="video-placeholder">Video Thumbnail</div>
       <h3>Cinematic Experiment 01</h3>
     </div>
  </div>
</BaseLayout>

<style>
  .video-placeholder {
    width: 100%;
    aspect-ratio: 16/9;
    background: #000;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    border-radius: 8px;
  }
  .film-grid { margin-top: 3rem; display: grid; gap: 3rem; }
</style>
