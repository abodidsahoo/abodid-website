import "../../styles/global.css";
import Footer from "../../components/Footer.astro";
---

<html lang="en">
    <head>
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-V07Z22DSVH"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-V07Z22DSVH');
        </script>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Punctum Architecture | Abodid</title>
        <script src="/scripts/journey-tracker.js" defer></script>
    </head>
    <body>
        <div class="architecture-page">
            <header class="arch-header">
                <div class="system-status-bar">
                    <div class="indicator-group user-select-none">
                        <div class="status-indicator"></div>
                        <span class="mono-label">SYSTEM STATUS: ONLINE</span>
                    </div>
                </div>

                <div class="breadcrumbs">
                    <a href="/architecture">← System Architecture</a>
                </div>

                <h1 class="arch-title">Punctum // Neuro-Symbolic Logic</h1>
                <p class="arch-intro">
                    An automated system for aesthetic judgment. How we taught a
                    machine to "feel" images by measuring the semantic
                    distance between human memory and computer vision.
                </p>
            </header>

            <main class="arch-grid">
                <!-- 01: The Core Loop -->
                <section class="arch-section">
                    <h2 class="section-title">01 // The Feedback Loop</h2>
                    <div class="pipeline-viz">
                        <div class="step">
                            <span class="step-label">INPUT</span>
                            <div class="step-box input">
                                <span>Image + Audio</span>
                                <span class="connector">↓</span>
                                <span>Human Memory</span>
                            </div>
                        </div>
                        <div class="arrow">→</div>
                        <div class="step">
                            <span class="step-label">PERCEPTION</span>
                            <div class="step-box vision">
                                <span>Vision Models</span>
                                <small>(Nvidia/Llama)</small>
                            </div>
                        </div>
                        <div class="arrow">→</div>
                        <div class="step">
                            <span class="step-label">SYNTHESIS</span>
                            <div class="step-box logic">
                                <span>Consensus Engine</span>
                                <small>(Semantic Distance)</small>
                            </div>
                        </div>
                        <div class="arrow">→</div>
                        <div class="step">
                            <span class="step-label">OUTPUT</span>
                            <div class="step-box output">
                                <span>Poetic Analysis</span>
                                <small>(Gap Report)</small>
                            </div>
                        </div>
                    </div>
                </section>

                {/* 02: Vision Stack */}
                <section class="arch-section two-col">
                    <div class="col-content">
                        <h2 class="section-title">
                            02 // The Eye (Vision Stack)
                        </h2>
                        <ul class="feature-list">
                            <li>
                                <span class="bullet">→</span>
                                <div>
                                    <strong>Primary: Nvidia Nemotron 12B</strong
                                    >
                                    <p>
                                        A specialized heavily-quantized vision
                                        model optimized for edge detection and
                                        scene composition. It provides the "raw"
                                        data of what is physically present in
                                        the frame.
                                    </p>
                                </div>
                            </li>
                            <li>
                                <span class="bullet">→</span>
                                <div>
                                    <strong>Fallback: Llama 3.2 11B</strong>
                                    <p>
                                        If the primary eye fails, the system
                                        fails over to Meta's multimodal model
                                        for a second opinion.
                                    </p>
                                </div>
                            </li>
                            <li>
                                <span class="bullet">→</span>
                                <div>
                                    <strong>Constraint</strong>
                                    <p>
                                        Models are forced to output strictly
                                        structured JSON, analyzing "Studium"
                                        (cultural context) and "Punctum"
                                        (emotional prick).
                                    </p>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="col-code">
                        <pre
                            class="code-block"><code>// The Vision Prompt (Simplified)
&#123;
  "role": "system",
  "content": "Identify the 'Punctum' 
   — the specific detail that 
   pricks the viewer. 
   Ignore the general subject."
&#125;</code></pre>
                    </div>
                </section>

                {/* 03: Cognition Stack */}
                <section class="arch-section two-col">
                    <div class="col-content">
                        <h2 class="section-title">
                            03 // The Mind (Cognition Stack)
                        </h2>
                        <ul class="feature-list">
                            <li>
                                <span class="bullet">→</span>
                                <div>
                                    <strong>Primary: Gemini 2.0 Flash</strong>
                                    <p>
                                        Used for high-speed semantic extraction.
                                        It reads user input (the "memory") and
                                        extracts 3 distinct emotional keywords.
                                    </p>
                                </div>
                            </li>
                            <li>
                                <span class="bullet">→</span>
                                <div>
                                    <strong>Secondary: Mistral Small 24B</strong
                                    >
                                    <p>
                                        A distinct "personality" used for the
                                        poetic synthesis, preventing the tone
                                        from becoming too corporate or sterile.
                                    </p>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="col-code">
                        <pre
                            class="code-block"><code>// The Extraction Logic
const keywords = content
  .split(',')
  .map(k => k.trim())
  .filter(k => k.length > 0)
  .slice(0, 3);
// Result: ["Nostalgia", "Decay", "Warmth"]</code></pre>
                    </div>
                </section>

                {/* 04: Consensus Engine */}
                <section class="arch-section">
                    <h2 class="section-title">04 // The Consensus Engine</h2>
                    <div class="consensus-explanation">
                        <p class="arch-text">
                            The heart of the system is the <strong
                                >Consensus Score</strong
                            >. We do not assume the AI is correct. Instead, we
                            measure the <em>distance</em> between what the machine
                            sees and what the human feels.
                        </p>
                        <div class="math-block">
                            SCORE = 100 - (|Vector(Human_Emotion) -
                            Vector(AI_Analysis)|)
                        </div>
                        <p class="arch-text small">
                            *Simplified representation. Actual calculation uses
                            LLM-based semantic analysis to determine contextual
                            alignment on a scale of 0-100.
                        </p>
                    </div>

                    <ul class="feature-list grid-3">
                        <li>
                            <span class="bullet">→</span>
                            <div>
                                <strong>High Score (&gt;80)</strong>
                                <p>
                                    Universal Alignment. The image translates
                                    perfectly across biological and silicon
                                    substrates.
                                </p>
                            </div>
                        </li>
                        <li>
                            <span class="bullet">→</span>
                            <div>
                                <strong>Mid Score (40-79)</strong>
                                <p>
                                    Subjective Variance. The AI sees the object,
                                    but the Human feels the memory.
                                </p>
                            </div>
                        </li>
                        <li>
                            <span class="bullet">→</span>
                            <div>
                                <strong>Low Score (&lt;40)</strong>
                                <p>
                                    Human Singularity. The emotion is so
                                    specific to the user's history that the
                                    machine fails to compute it.
                                </p>
                            </div>
                        </li>
                    </ul>
                </section>
            </main>
        </div>
        <Footer />
    </body>
</html>

<style>
    .architecture-page {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2rem 24px 4rem;
    }

    .arch-header {
        margin-bottom: 3rem;
        border-bottom: 1px solid var(--border-subtle);
        padding-bottom: 2rem;
    }

    .system-status-bar {
        margin-bottom: 1rem;
        font-family: var(--font-ui);
        font-size: 0.75rem;
        letter-spacing: 0.08em;
        color: var(--text-tertiary);
        text-transform: uppercase;
    }

    .indicator-group {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-indicator {
        width: 0.5rem;
        height: 0.5rem;
        border-radius: 50%;
        background: var(--accent-primary);
    }

    .breadcrumbs {
        margin-bottom: 0.9rem;
    }

    .breadcrumbs a {
        color: var(--text-tertiary);
        font-family: var(--font-ui);
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        text-decoration: none;
        letter-spacing: 0.05em;
        transition: color 0.2s ease;
    }

    .breadcrumbs a:hover {
        color: var(--accent-primary);
    }

    .arch-title {
        font-family: var(--font-display);
        font-size: clamp(2.4rem, 5vw, 4rem);
        font-weight: 600;
        letter-spacing: -0.02em;
        margin: 0 0 1rem;
        line-height: 1.1;
        color: var(--text-primary);
    }

    .arch-intro {
        margin: 0;
        font-family: var(--font-sans);
        font-size: 1.1rem;
        line-height: 1.6;
        color: var(--text-secondary);
        max-width: 760px;
    }

    .arch-grid {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        margin-bottom: 3rem;
    }

    .arch-section {
        display: block;
    }

    .section-title {
        margin: 0 0 1.25rem;
        font-family: var(--font-display);
        font-size: clamp(1.35rem, 2vw, 1.9rem);
        font-weight: 600;
        letter-spacing: -0.01em;
        color: var(--text-primary);
    }

    .arch-text {
        margin: 0 0 1rem;
        font-family: var(--font-sans);
        font-size: 1rem;
        line-height: 1.6;
        color: var(--text-secondary);
        max-width: 760px;
    }

    .arch-text strong {
        color: var(--text-primary);
        font-weight: 600;
    }

    .arch-text em {
        font-style: italic;
    }

    .arch-text.small {
        font-size: 0.9rem;
        color: var(--text-tertiary);
    }

    .pipeline-viz {
        display: flex;
        align-items: stretch;
        gap: 0.75rem;
        flex-wrap: wrap;
        padding: 1rem;
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-md);
        background: var(--bg-surface);
    }

    .step {
        display: flex;
        flex-direction: column;
        gap: 0.45rem;
        min-width: 160px;
        flex: 1 1 200px;
    }

    .step-label {
        font-family: var(--font-ui);
        font-size: 0.72rem;
        color: var(--text-tertiary);
        letter-spacing: 0.06em;
        text-transform: uppercase;
    }

    .step-box {
        padding: 0.9rem 1rem;
        background: var(--bg-color);
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-sm);
        font-family: var(--font-sans);
        font-size: 0.95rem;
        color: var(--text-primary);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        min-height: 100%;
    }

    .step-box small {
        font-size: 0.72rem;
        color: var(--text-tertiary);
        margin-top: 0.4rem;
    }

    .step-box.vision {
        border-color: var(--accent-primary);
    }

    .step-box.logic {
        border-color: var(--border-strong);
    }

    .step-box.output {
        border-color: var(--border-strong);
    }

    .connector {
        color: var(--text-tertiary);
        font-size: 0.8rem;
        margin: 0.2rem 0;
    }

    .arrow {
        display: flex;
        align-items: center;
        color: var(--text-tertiary);
        font-family: var(--font-ui);
        font-size: 0.95rem;
        line-height: 1;
    }

    .consensus-explanation {
        margin-bottom: 1.25rem;
    }

    .two-col {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .col-content {
        min-width: 0;
    }

    .col-code {
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-md);
        background: var(--bg-surface);
        padding: 1rem;
        overflow-x: auto;
    }

    .code-block {
        margin: 0;
        font-family: var(--font-mono);
        font-size: 0.87rem;
        line-height: 1.55;
        color: var(--text-secondary);
    }

    .feature-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .feature-list li {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 0.75rem;
        align-items: start;
    }

    .bullet {
        color: var(--text-tertiary);
        font-family: var(--font-ui);
        line-height: 1.5;
    }

    .feature-list strong {
        display: block;
        margin: 0 0 0.35rem;
        font-family: var(--font-display);
        font-size: 1.05rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .feature-list p {
        margin: 0;
        font-family: var(--font-sans);
        font-size: 1rem;
        line-height: 1.6;
        color: var(--text-secondary);
    }

    .feature-list code {
        font-family: var(--font-mono);
        font-size: 0.95em;
        overflow-wrap: anywhere;
        word-break: break-word;
    }

    .grid-3 {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .grid-3 li {
        background: var(--bg-surface);
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-md);
        padding: 1rem;
    }

    .math-block {
        font-family: var(--font-mono);
        font-size: 0.9rem;
        line-height: 1.6;
        background: var(--bg-surface);
        border: 1px solid var(--border-subtle);
        border-left: 3px solid var(--accent-primary);
        border-radius: var(--radius-sm);
        padding: 1rem;
        margin: 1rem 0;
        color: var(--text-primary);
        overflow-x: auto;
    }

    @media (min-width: 1024px) {
        .two-col {
            grid-template-columns: repeat(2, minmax(0, 1fr));
            column-gap: 2.5rem;
            row-gap: 2rem;
        }

        .grid-3 {
            grid-template-columns: repeat(3, minmax(0, 1fr));
        }
    }

    @media (max-width: 768px) {
        .architecture-page {
            padding: 1.5rem 16px 3rem;
        }

        .pipeline-viz {
            flex-direction: column;
            align-items: stretch;
            gap: 1rem;
        }

        .arrow {
            display: none;
        }

        .arch-header {
            margin-bottom: 2.5rem;
        }

        .arch-grid {
            gap: 2.5rem;
        }

        .step {
            min-width: 0;
        }
    }
</style>
