---
export const prerender = false;
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogFilter from "../../components/BlogFilter.jsx";
import { getAllPosts } from "../../lib/api";

const recentPosts = await getAllPosts();
const pageTitle = "Journal";
---

<BaseLayout title={pageTitle}>
  <header class="page-header">
    <h1>Journal</h1>
    <p class="section-intro">Thoughts, notes, and observations.</p>
  </header>

  <div class="blog-container">
    <BlogFilter posts={recentPosts} client:load />
  </div>
</BaseLayout>

<style>
  .blog-container {
    margin-bottom: var(--space-3xl);
  }
</style>
