---
interface Props {
  title: string;
  category: string;
  image: string;
  href: string;
}

const { title, category, image, href } = Astro.props;
---

<a href={href} class="photography-card group">
  <div class="image-container">
    <img
      src={image}
      alt={title}
      class="slide-image active"
      loading="lazy"
      sizes="(max-width: 600px) 100vw, (max-width: 1024px) 50vw, 33vw"
    />

    <!-- Sci-Fi Overlay -->
    <div class="meta-overlay">
      <h3 class="title">{title}</h3>
      <span class="category">{category}</span>

      <!-- Corner Accents -->
      <div class="corner top-left"></div>
      <div class="corner bottom-right"></div>
    </div>
  </div>
</a>

<style>
  .photography-card {
    display: block;
    cursor: pointer;
    position: relative;
  }

  .image-container {
    background-color: var(--bg-surface);
    overflow: hidden;
    border-radius: 6px;
    aspect-ratio: 16/9; /* Reverted to 16:9 Landscape as requested */
    border: 1px solid var(--border-subtle);
    transition: border-color 0.3s ease;
    position: relative;
    height: auto;
  }

  /* Revert mobile to 16:9 or keep same as desktop */
  @media (max-width: 600px) {
    .image-container {
      aspect-ratio: 16/9 !important;
      border-width: 1px; /* Ensure tiny border */
    }
  }

  .photography-card:hover .image-container {
    border-color: var(--sci-fi-cyan, #00f3ff);
    box-shadow: 0 0 15px rgba(0, 243, 255, 0.15);
  }

  .slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition:
      transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1),
      opacity 2s ease-in-out;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .slide-image.active {
    opacity: 1;
    pointer-events: none; /* Prevent images from interfering with hover */
  }

  /* Dim image on hover to make text pop */
  .photography-card:hover .slide-image {
    transform: scale(1.05);
    filter: brightness(0.6);
  }

  /* Overlay Styling (Hidden by default) */
  .meta-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 30; /* Higher z-index to stay on top during image transitions */

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;

    padding: 1rem 1.5rem;
    min-width: 60%;

    background: rgba(10, 15, 20, 0.8); /* Darker backdrop for text */
    backdrop-filter: blur(4px);
    border: 1px solid rgba(0, 243, 255, 0.3);
    border-radius: 4px;

    opacity: 0; /* Hidden */
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
    pointer-events: none; /* Let clicks pass through to link */

    /* Prevent overlay from being affected by image transitions */
    will-change: opacity, transform;
  }

  .photography-card:hover .meta-overlay {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.05);
  }

  .title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #fff;
    margin: 0 0 0.25rem 0;
    font-family: "Space Mono", monospace;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    text-shadow: 0 0 10px rgba(0, 243, 255, 0.5);
  }

  .category {
    font-size: 0.8rem;
    font-family: "Inconsolata", monospace;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--sci-fi-cyan, #00f3ff);
  }

  /* Corner Accents */
  .corner {
    position: absolute;
    width: 8px;
    height: 8px;
    border: 1px solid transparent;
    transition: all 0.3s ease;
  }

  .corner.top-left {
    top: -1px;
    left: -1px;
    border-top: 2px solid var(--sci-fi-cyan);
    border-left: 2px solid var(--sci-fi-cyan);
  }

  .corner.bottom-right {
    bottom: -1px;
    right: -1px;
    border-bottom: 2px solid var(--sci-fi-cyan);
    border-right: 2px solid var(--sci-fi-cyan);
  }
</style>
