<header class="site-header">
  <div class="container header-inner">
    <a href="/" class="logo" aria-label="Abodid Home">
      <img
        src="/images/signature-black.png"
        alt="Abodid"
        class="logo-img logo-black"
      />
      <img
        src="/images/signature-white.png"
        alt="Abodid"
        class="logo-img logo-white"
      />
    </a>
    <nav class="desktop-nav">
      <ul class="nav-list">
        <li><a href="/photography">Photography</a></li>
        <li><a href="/films">Films</a></li>
        <li><a href="/research">Research</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </nav>
    <button class="mobile-menu-button" aria-label="Toggle menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
  </div>
</header>

<div class="mobile-menu-overlay">
  <nav class="mobile-menu">
    <ul class="mobile-nav-list">
      <li><a href="/photography">Photography</a></li>
      <li><a href="/films">Films</a></li>
      <li><a href="/research">Research</a></li>
      <li><a href="/blog">Blog</a></li>
      <li><a href="/about">About</a></li>
    </ul>
  </nav>
</div>

<style>
  .site-header {
    height: var(--header-height);
    display: flex;
    align-items: center;
    border-bottom: 1px solid var(--border-subtle);
    overflow: hidden;
  }

  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    z-index: 1001;
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: 60px;
    width: auto;
    display: block;
    margin-top: 4px; /* Slight adjustment for visual balance */
  }

  /* Default (Light Mode) */
  .logo-black {
    display: block;
  }

  .logo-white {
    display: none;
  }

  /* Dark Mode */
  :global([data-theme="dark"]) .logo-black {
    display: none;
  }

  :global([data-theme="dark"]) .logo-white {
    display: block;
  }

  .desktop-nav {
    display: flex;
  }

  .nav-list {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-list a {
    font-size: 0.95rem;
    color: var(--text-secondary);
  }

  .nav-list a:hover {
    color: var(--text-primary);
  }

  /* Mobile Menu Button */
  .mobile-menu-button {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 1001;
  }

  .hamburger-line {
    width: 22px;
    height: 2px;
    background-color: var(--text-primary);
    transition: all 0.3s ease;
  }

  /* Mobile Menu Overlay */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    right: -100%;
    width: 250px;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.97);
    border-left: 1px solid rgba(255, 255, 255, 0.1);
    transition: right 0.3s ease;
    z-index: 1000;
  }

  .mobile-menu-overlay.active {
    right: 0;
  }

  .mobile-menu {
    padding: 100px 30px 30px;
  }

  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .mobile-nav-list a {
    font-size: 0.8rem;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 400;
    transition: opacity 0.2s ease;
  }

  .mobile-nav-list a:hover {
    opacity: 0.7;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .site-header {
      height: 70px;
    }

    .desktop-nav {
      display: none;
    }

    .mobile-menu-button {
      display: flex;
    }
  }
</style>

<script>
  const menuButton = document.querySelector(".mobile-menu-button");
  const menuOverlay = document.querySelector(".mobile-menu-overlay");
  const menuLinks = document.querySelectorAll(".mobile-nav-list a");

  menuButton?.addEventListener("click", () => {
    menuOverlay?.classList.toggle("active");

    // Animate hamburger to X
    const lines = menuButton.querySelectorAll(".hamburger-line");
    if (menuOverlay?.classList.contains("active")) {
      lines[0].style.transform = "rotate(45deg) translateY(7px)";
      lines[1].style.opacity = "0";
      lines[2].style.transform = "rotate(-45deg) translateY(-7px)";
    } else {
      lines[0].style.transform = "none";
      lines[1].style.opacity = "1";
      lines[2].style.transform = "none";
    }
  });

  // Close menu when clicking a link
  menuLinks.forEach((link) => {
    link.addEventListener("click", () => {
      menuOverlay?.classList.remove("active");
      const lines = menuButton?.querySelectorAll(".hamburger-line");
      if (lines) {
        lines[0].style.transform = "none";
        lines[1].style.opacity = "1";
        lines[2].style.transform = "none";
      }
    });
  });

  // Close menu when clicking outside
  menuOverlay?.addEventListener("click", (e) => {
    if (e.target === menuOverlay) {
      menuOverlay.classList.remove("active");
      const lines = menuButton?.querySelectorAll(".hamburger-line");
      if (lines) {
        lines[0].style.transform = "none";
        lines[1].style.opacity = "1";
        lines[2].style.transform = "none";
      }
    }
  });
</script>
