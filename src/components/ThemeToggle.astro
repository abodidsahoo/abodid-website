<button
    id="theme-toggle"
    class="theme-toggle"
    title="Toggle theme"
    aria-label="Toggle theme"
>
    <span class="sr-only"> </span>
    <div class="toggle-track">
        <div class="toggle-thumb">
            <!-- Sun Icon -->
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon sun-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <circle cx="12" cy="12" r="5"></circle>
                <line x1="12" y1="1" x2="12" y2="3"></line>
                <line x1="12" y1="21" x2="12" y2="23"></line>
                <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                <line x1="1" y1="12" x2="3" y2="12"></line>
                <line x1="21" y1="12" x2="23" y2="12"></line>
                <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </svg>
            <!-- Moon Icon -->
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon moon-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
                ></path>
            </svg>
        </div>
    </div>
</button>

<style>
    .theme-toggle {
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 0;
        margin: 0;
        display: flex;
        align-items: center;
        position: relative;
        opacity: 0.8;
        transition: opacity 0.2s ease;
    }

    .theme-toggle:hover {
        opacity: 1;
    }

    .toggle-track {
        width: 44px;
        height: 24px;
        background-color: var(--border-subtle);
        border-radius: 12px;
        position: relative;
        transition: background-color 0.3s ease;
        border: 1px solid var(--border-strong);
    }

    .toggle-thumb {
        width: 20px;
        height: 20px;
        background-color: var(--text-primary);
        border-radius: 50%;
        position: absolute;
        top: 1px;
        left: 1px;
        transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--bg-canvas);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .icon {
        width: 12px;
        height: 12px;
        position: absolute;
        transition:
            opacity 0.2s ease,
            transform 0.2s ease;
    }

    /* Default (Dark) State - Moon visible */
    .sun-icon {
        opacity: 0;
        transform: rotate(-90deg) scale(0.5);
    }
    .moon-icon {
        opacity: 1;
        transform: rotate(0) scale(1);
        fill: currentColor;
    }

    /* Light Theme State */
    :global([data-theme="light"]) .theme-toggle .toggle-thumb {
        transform: translateX(20px);
        background-color: #ffd700; /* Sunny yellow for thumb in light mode */
        color: #8a6c00;
    }

    :global([data-theme="light"]) .theme-toggle .toggle-track {
        background-color: #e0e0e0;
        border-color: #ccc;
    }

    :global([data-theme="light"]) .sun-icon {
        opacity: 1;
        transform: rotate(0) scale(1);
    }

    :global([data-theme="light"]) .moon-icon {
        opacity: 0;
        transform: rotate(90deg) scale(0.5);
    }
</style>

<script is:inline>
    // Script to handle theme toggle logic
    // Placed inline to run as early as possible (though blocking script in Head is better for FOUC)
    // This part handles the interactive part

    const themeToggle = document.getElementById("theme-toggle");

    const getTheme = () => {
        if (
            typeof localStorage !== "undefined" &&
            localStorage.getItem("theme")
        ) {
            return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: light)").matches) {
            return "light";
        }
        return "dark"; // Default to dark
    };

    const setTheme = (theme) => {
        document.documentElement.setAttribute("data-theme", theme);
        localStorage.setItem("theme", theme);
    };

    // Initial set is handled in BaseLayout head script to avoid FOUC
    // But we can double check here or just handle toggle click

    themeToggle?.addEventListener("click", () => {
        const currentTheme =
            document.documentElement.getAttribute("data-theme") || "dark";
        const newTheme = currentTheme === "light" ? "dark" : "light";
        setTheme(newTheme);
    });

    // Listen for system changes if no override is set does make sense,
    // but for simplicity we rely on manual toggle once pressed.
</script>
