    }

    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-tertiary);
        transition: all 0.3s ease;
    }

    .social-links a:hover {
        transform: translateY(-2px);
        filter: brightness(1.1); /* Subtle brightness bump */
    }

    .social-links img {
        width: 24px;
        height: 24px;
        object-fit: contain;
        display: block;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }
</style>
