<style>
    .social-links {
        display: grid;
        grid-template-columns: repeat(
            4,
            1fr
        ); /* 4 columns -> 4 top, 3 bottom */
        gap: 1.5rem 1rem; /* Row gap 1.5rem, Col gap 1rem */
        margin-top: 1.2rem; /* Spacing from title */
        width: fit-content;
    }

    .social-links a {
        display: flex;
        align-items: center;
        width: max-content;
        color: var(--text-secondary); /* Higher contrast */
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .social-links a:hover {
        transform: translateY(-2px);
        color: var(--text-primary);
    }

    .social-links i {
        font-size: 1.8rem; /* Larger size */
    }
</style>
