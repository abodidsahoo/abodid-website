<style>
    .social-links {
        display: flex;
        flex-wrap: wrap;
        gap: 1.2rem;
        margin-top: 1rem;
        width: 100%;
    }

    .social-links a {
        display: flex;
        align-items: center;
        width: max-content;
        color: var(--text-secondary); /* Higher contrast */
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .social-links a:hover {
        transform: translateY(-2px);
        color: var(--text-primary);
    }

    .social-links i {
        font-size: 1.8rem; /* Larger size */
    }
</style>
