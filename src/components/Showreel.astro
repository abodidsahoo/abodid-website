---
interface Props {
    vh1Url?: string;
    rollingStoneUrl?: string;
    homegrownUrl?: string;
    educateGirlsUrl?: string;
    curvesColorsUrl?: string;
    pursuitUrl?: string;
    hermosaUrl?: string;
    budweiserUrl?: string;
    wiedenUrl?: string;
    animalUrl?: string;
    jawaUrl?: string;
    odishaUrl?: string;
}

const {
    vh1Url = "#",
    rollingStoneUrl = "#",
    homegrownUrl = "#",
    educateGirlsUrl = "#",
    curvesColorsUrl = "#",
    pursuitUrl = "#",
    hermosaUrl = "#",
    budweiserUrl = "#",
    wiedenUrl = "#",
    animalUrl = "#",
    jawaUrl = "#",
    odishaUrl = "#",
} = Astro.props;

const videoUrl =
    "https://jwipqbjxpmgyevfzpjjx.supabase.co/storage/v1/object/public/films/videos/Showreel%202025%20compressed.mp4";
---

<div class="showreel-container">
    <video
        id="showreel-video"
        class="showreel-video"
        loop
        muted
        playsinline
        webkit-playsinline
        preload="auto"
        autoplay
    >
        <!-- Source will be added via JS with proper type -->
    </video>

    <!-- Video Controls -->
    <div class="video-controls">
        <!-- Fullscreen Button -->
        <button
            id="fullscreen-btn"
            class="control-btn"
            title="Toggle Fullscreen"
        >
            <!-- Enter Fullscreen Icon (Default) -->
            <svg id="icon-enter-fullscreen" viewBox="0 0 24 24">
                <path
                    d="M7 14H5v5h5v-2H7v-3zm-2-4h2V7h3V5H5v5zm12 7h-3v2h5v-5h-2v3zM14 5v2h3v3h2V5h-5z"
                ></path>
            </svg>
            <!-- Exit Fullscreen Icon -->
            <svg
                id="icon-exit-fullscreen"
                viewBox="0 0 24 24"
                style="display: none;"
            >
                <path
                    d="M5 16h3v3h2v-5H5v2zm3-8H5v2h5V5H8v3zm6 11h2v-3h3v-2h-5v5zm2-11V5h-2v5h5V8h-3z"
                ></path>
            </svg>
        </button>

        <!-- Mute/Unmute Button -->
        <button id="mute-btn" class="control-btn" title="Toggle Sound">
            <!-- Muted Icon (Default) -->
            <svg id="icon-muted" viewBox="0 0 24 24">
                <path
                    d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73 4.27 3zM12 4L9.91 6.09 12 8.18V4z"
                ></path>
            </svg>
            <!-- Unmuted Icon -->
            <svg id="icon-unmuted" viewBox="0 0 24 24" style="display: none;">
                <path
                    d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"
                ></path>
            </svg>
        </button>
    </div>
</div>

<!-- Credits Section (Separate from video) -->
<div class="showreel-credits">
    <p class="credits-roles">
        <span class="role-label">ROLE:</span> Director / Editor / Sound Designer /
        Cinematographer / Colourist / Creative Producer
    </p>
    <div class="credits-buttons-row">
        <a href="/films" class="view-all-btn">VIEW ALL FILMS</a>
        <button id="manifesto-toggle-btn" class="view-all-btn manifesto-toggle">
            READ MY FILM MAKING MANIFESTO
        </button>
    </div>
</div>

<!-- Collapsible Manifesto Section -->
<div id="manifesto-section" class="manifesto-section" style="display: none;">
    <div class="manifesto-content">
        <div class="manifesto-boxes">
            <div class="manifesto-box manifesto-box-red">
                <h3>Vision</h3>
                <p>
                    Film is about creating experiences that resonate deeply. I
                    believe in authenticity, stories that matter, and visual
                    storytelling that builds communities and inspires change.
                </p>
            </div>
            <div class="manifesto-box manifesto-box-blue">
                <h3>Approach</h3>
                <p>
                    Collaborative work, valuing depth over noise. Every project
                    explores new creative territories while staying true to the
                    core narrative. My goal is work that stands the test of
                    time.
                </p>
            </div>
        </div>
        <div class="manifesto-journey">
            <h2>Filmmaking Journey</h2>
            <p>
                Collaborated with artists like XY on experimental music videos
                broadcast on <a
                    href={vh1Url}
                    target="_blank"
                    rel="noopener noreferrer">VH1 India</a
                >, featured in <a
                    href={rollingStoneUrl}
                    target="_blank"
                    rel="noopener noreferrer">Rolling Stone</a
                > and <a
                    href={homegrownUrl}
                    target="_blank"
                    rel="noopener noreferrer">Homegrown</a
                >. Created documentary films for <a
                    href={educateGirlsUrl}
                    target="_blank"
                    rel="noopener noreferrer">Educate Girls</a
                >, <a
                    href={curvesColorsUrl}
                    target="_blank"
                    rel="noopener noreferrer">Curves and Colors</a
                >, and <a
                    href={pursuitUrl}
                    target="_blank"
                    rel="noopener noreferrer">Pursuit of Portraits (NY)</a
                >.
            </p>
            <p>
                Worked with clients including <a
                    href={hermosaUrl}
                    target="_blank"
                    rel="noopener noreferrer">Hermosa Design</a
                >, <a
                    href={budweiserUrl}
                    target="_blank"
                    rel="noopener noreferrer">Budweiser</a
                >, <a href={wiedenUrl} target="_blank" rel="noopener noreferrer"
                    >Wieden+Kennedy</a
                >, <a href={animalUrl} target="_blank" rel="noopener noreferrer"
                    >Animal</a
                >, <a href={jawaUrl} target="_blank" rel="noopener noreferrer"
                    >Jawa Motorcycles</a
                >, and <a
                    href={odishaUrl}
                    target="_blank"
                    rel="noopener noreferrer">Odisha Tourism</a
                >.
            </p>
        </div>
    </div>
</div>

<script define:vars={{ videoUrl }}>
    document.addEventListener("DOMContentLoaded", () => {
        const container = document.querySelector(".showreel-container");
        const video = document.getElementById("showreel-video");
        const muteBtn = document.getElementById("mute-btn");
        const iconMuted = document.getElementById("icon-muted");
        const iconUnmuted = document.getElementById("icon-unmuted");
        const fullscreenBtn = document.getElementById("fullscreen-btn");
        const iconEnterFullscreen = document.getElementById(
            "icon-enter-fullscreen",
        );
        const iconExitFullscreen = document.getElementById(
            "icon-exit-fullscreen",
        );

        if (!container || !video) return;

        // Toggle Mute Logic
        if (muteBtn) {
            muteBtn.addEventListener("click", () => {
                video.muted = !video.muted;
                if (video.muted) {
                    iconMuted.style.display = "block";
                    iconUnmuted.style.display = "none";
                } else {
                    iconMuted.style.display = "none";
                    iconUnmuted.style.display = "block";
                }
            });
        }

        // Toggle Fullscreen Logic
        if (fullscreenBtn) {
            fullscreenBtn.addEventListener("click", () => {
                if (!document.fullscreenElement) {
                    // Enter fullscreen
                    container
                        .requestFullscreen()
                        .then(() => {
                            iconEnterFullscreen.style.display = "none";
                            iconExitFullscreen.style.display = "block";
                        })
                        .catch((err) => {
                            console.error("Error entering fullscreen:", err);
                        });
                } else {
                    // Exit fullscreen
                    document
                        .exitFullscreen()
                        .then(() => {
                            iconEnterFullscreen.style.display = "block";
                            iconExitFullscreen.style.display = "none";
                        })
                        .catch((err) => {
                            console.error("Error exiting fullscreen:", err);
                        });
                }
            });

            // Listen for fullscreen changes (e.g., ESC key)
            document.addEventListener("fullscreenchange", () => {
                if (!document.fullscreenElement) {
                    iconEnterFullscreen.style.display = "block";
                    iconExitFullscreen.style.display = "none";
                }
            });
        }

        // Simplified Loading Strategy - Direct Load, No Flicker
        const loadShowreel = () => {
            if (!video.src) {
                // Set video source
                video.src = videoUrl;

                // Show container immediately
                container.style.display = "block";

                // Try to play
                video.play().catch(() => {
                    console.log("Autoplay blocked, waiting for interaction");
                });

                // Simple check loop to ensure playback if possible
                const ensurePlay = () => {
                    if (video.paused && !video.ended) {
                        video.play().catch(() => {});
                    }
                };

                // Check a few times
                setTimeout(ensurePlay, 500);
                setTimeout(ensurePlay, 1000);
            }
        };

        // Load immediately on mount (or very short delay)
        loadShowreel();

        // Manifesto Toggle Logic
        const manifestoToggleBtn = document.getElementById(
            "manifesto-toggle-btn",
        );
        const manifestoSection = document.getElementById("manifesto-section");

        if (manifestoToggleBtn && manifestoSection) {
            manifestoToggleBtn.addEventListener("click", () => {
                const isOpen = manifestoSection.style.display !== "none";

                if (isOpen) {
                    // Close the manifesto
                    manifestoSection.style.maxHeight =
                        manifestoSection.scrollHeight + "px";
                    // Trigger reflow
                    manifestoSection.offsetHeight;
                    manifestoSection.style.maxHeight = "0";
                    manifestoSection.style.opacity = "0";

                    setTimeout(() => {
                        manifestoSection.style.display = "none";
                    }, 400); // Match transition duration

                    manifestoToggleBtn.textContent =
                        "READ MY FILM MAKING MANIFESTO";
                } else {
                    // Open the manifesto
                    manifestoSection.style.display = "block";
                    manifestoSection.style.opacity = "0";
                    manifestoSection.style.maxHeight = "0";

                    // Trigger reflow
                    manifestoSection.offsetHeight;

                    const fullHeight = manifestoSection.scrollHeight + "px";
                    manifestoSection.style.maxHeight = fullHeight;
                    manifestoSection.style.opacity = "1";

                    manifestoToggleBtn.textContent =
                        "HIDE MY FILM MAKING MANIFESTO";

                    // Remove max-height after transition completes for dynamic content
                    setTimeout(() => {
                        if (manifestoSection.style.display !== "none") {
                            manifestoSection.style.maxHeight = "none";
                        }
                    }, 400);
                }
            });
        }
    });
</script>

<style>
    :root {
        --sci-fi-cyan: #00f3ff;
        --sci-fi-glow: rgba(0, 243, 255, 0.2);
    }

    .showreel-container {
        width: 100%;
        max-width: var(--max-width);
        margin: 0 auto;
        margin-top: 0;
        margin-bottom: 0;

        position: relative;

        /* Will be animated from 0 to full height */
        /* Height will be set dynamically based on aspect ratio */

        background-color: #050a10;

        /* Sci-Fi Theme Styling */
        border-radius: 12px; /* APPLY RADIUS TO CONTAINER */
        overflow: hidden; /* FORCE MASKING for all views */
        border: 1px solid rgba(0, 243, 255, 0.3);
        box-shadow:
            0 10px 40px rgba(0, 0, 0, 0.6),
            0 0 20px var(--sci-fi-glow);

        /* Smooth transitions will be applied via JS */
    }

    /* Corner Accents (Pseudo-elements) */
    .showreel-container::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 12px;
        box-shadow: inset 0 0 20px rgba(0, 243, 255, 0.1);
        pointer-events: none;
        z-index: 2; /* Ensure overlay is ON TOP of video */
    }

    .showreel-video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        aspect-ratio: 16 / 9;
        /* Ensure video stays behind the container mask/border effects */
        position: relative;
        z-index: 1;
    }

    /* Video Controls Container */
    .video-controls {
        position: absolute;
        bottom: 20px;
        right: 20px;
        z-index: 10;
        display: flex;
        gap: 12px;
    }

    /* Control Button Styling (Mute & Fullscreen) */
    .control-btn {
        background: rgba(5, 10, 16, 0.8);
        border: 1px solid var(--sci-fi-cyan);
        color: var(--sci-fi-cyan);
        border-radius: 50%;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        opacity: 0;
        transform: translateY(10px);
        transition: all 0.3s ease;
        backdrop-filter: blur(4px);
    }

    .control-btn:hover {
        background: rgba(0, 243, 255, 0.1);
        box-shadow: 0 0 15px rgba(0, 243, 255, 0.3);
    }

    .control-btn svg {
        width: 20px;
        height: 20px;
        fill: currentColor;
    }

    /* Show buttons on container hover */
    .showreel-container:hover .control-btn {
        opacity: 1;
        transform: translateY(0);
    }

    /* Credits Section (Now separate from video container) */
    .showreel-credits {
        width: 100%;
        max-width: var(--max-width);
        margin: 0 auto;
        margin-top: 2rem;
        margin-bottom: var(--space-2xl);
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 0;
    }

    .credits-roles {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--text-secondary);
        margin: 0;
        line-height: 1.6;
    }

    .role-label {
        color: var(--text-secondary);
        font-weight: 600;
        margin-right: 0.5rem;
    }

    .view-all-btn {
        display: inline-block;
        width: fit-content;
        font-family: monospace;
        font-size: 0.9rem;
        color: var(--text-primary);
        background: transparent;
        border: 1px solid var(--border-subtle);
        padding: 0.75rem 1.5rem;
        border-radius: 2px;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .view-all-btn:hover {
        background: var(--text-primary);
        color: #000; /* Dark text for visibility */
        border-color: var(--text-primary);
    }

    /* Buttons Row Layout */
    .credits-buttons-row {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .manifesto-toggle {
        cursor: pointer;
    }

    /* Manifesto Section Styles */
    .manifesto-section {
        width: 100%;
        max-width: var(--max-width);
        margin: 0.5rem auto 0; /* Tightened gap further */
        overflow: hidden;
        transition:
            max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1),
            opacity 0.4s ease;
    }

    .manifesto-content {
        padding: 1rem 0 2rem; /* Reduced top padding to close gap */
    }

    .manifesto-boxes {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .manifesto-box {
        padding: 2rem;
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .manifesto-box-red {
        background: linear-gradient(
            135deg,
            rgba(208, 0, 0, 0.15) 0%,
            rgba(150, 0, 0, 0.08) 100%
        );
        border-color: rgba(208, 0, 0, 0.3);
    }

    .manifesto-box-blue {
        background: linear-gradient(
            135deg,
            rgba(0, 100, 200, 0.15) 0%,
            rgba(0, 50, 150, 0.08) 100%
        );
        border-color: rgba(0, 100, 200, 0.3);
    }

    .manifesto-box h3 {
        font-family: "Inconsolata", monospace;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        margin-bottom: 1rem;
        color: var(--text-primary);
        font-weight: 700; /* Bold */
    }

    .manifesto-box p {
        font-family: "Inconsolata", monospace;
        font-size: 0.95rem;
        line-height: 1.8;
        color: var(--text-secondary);
    }

    .manifesto-journey {
        padding: 2rem;
        background: rgba(255, 255, 255, 0.02);
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .manifesto-journey h2 {
        font-family: "Inconsolata", monospace;
        font-size: 1.2rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1.5rem;
        color: var(--text-primary);
        font-weight: 700; /* Bold */
    }

    .manifesto-journey p {
        font-family: "Inconsolata", monospace;
        font-size: 1rem;
        line-height: 1.8;
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }

    .manifesto-journey p:last-child {
        margin-bottom: 0;
    }

    /* Clickable Links in Manifesto */
    .manifesto-journey a {
        color: var(--text-primary);
        text-decoration: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        transition: all 0.2s ease;
        cursor: pointer;
    }

    .manifesto-journey a:hover {
        color: #ffffff;
        border-bottom-color: #ffffff;
        cursor: pointer;
    }

    @media (max-width: 768px) {
        .showreel-container {
            border-radius: 12px; /* APPLY RADIUS TO CONTAINER (Mask) */
            border: none;
            box-shadow: none;
            margin-left: 0;
            width: 100%;
            max-width: none;
            overflow: hidden; /* FORCE MASKING of video */
            /* Remove any padding/gap that might cause "weird spacing" */
            padding: 0;
            background: black; /* seamless bg */
            aspect-ratio: 16/9; /* Enforce ratio on container */
        }

        .showreel-video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 0; /* Let container handle the mask */
            display: block;
        }

        /* Always show control buttons on mobile since there is no hover */
        .control-btn {
            opacity: 1;
            transform: translateY(0);
        }

        .video-controls {
            bottom: 16px;
            right: 16px;
        }

        /* Manifesto Mobile Styles */
        .credits-buttons-row {
            flex-direction: column;
            gap: 0.75rem;
        }

        .view-all-btn,
        .manifesto-toggle {
            width: 100%;
            text-align: center;
        }

        .manifesto-boxes {
            grid-template-columns: 1fr;
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .manifesto-box {
            padding: 1.5rem;
        }

        .manifesto-journey {
            padding: 1.5rem;
        }

        .manifesto-journey h2 {
            font-size: 1rem;
        }

        .manifesto-journey p {
            font-size: 0.85rem;
        }
    }
</style>
