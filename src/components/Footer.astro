---
import Newsletter from "./Newsletter.astro";
import SocialLinks from "./SocialLinks.astro";

const year = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Column 1: The Signal (Brand & Newsletter) -->
      <div class="footer-col signal">
        <div class="brand-block">
          <a href="/" class="footer-logo" aria-label="Abodid Home">
            <img
              src="/images/signature-black.png"
              alt="Abodid"
              class="logo-img logo-black"
            />
            <img
              src="/images/signature-white.png"
              alt="Abodid"
              class="logo-img logo-white"
            />
          </a>
          <!-- <p class="tagline">The things we do for love.</p> -->
        </div>

        <div class="social-wrapper">
          <SocialLinks />
        </div>

        <div class="newsletter-section" id="newsletter">
          <p class="section-title">
            Subscribe to my newsletter <br /> for a monthly dose of creative inspiration.
          </p>
          <Newsletter />
        </div>
      </div>

      <!-- Column 2: Studio & Recognition -->
      <div class="footer-col links-col">
        <div class="nav-group">
          <span class="nav-header">Studio</span>
          <a href="/photography">Photography</a>
          <a href="/films">Films</a>
          <a href="/visual-experiments">Visual Experiments</a>
        </div>

        <div class="nav-group">
          <span class="nav-header">Recognition</span>
          <a href="/awards">Awards</a>
          <a href="/press">Press Mentions</a>
        </div>
      </div>

      <!-- Column 3: The Lab & System -->
      <div class="footer-col links-col">
        <div class="nav-group">
          <span class="nav-header">The Lab</span>
          <a href="/research">Research Projects</a>
          <a href="/research-papers">Research Papers</a>
          <a href="/secret-lab">Secret Lab / Vault</a>
        </div>

        <div class="nav-group">
          <span class="nav-header">System</span>
          <a href="/colophon">Colophon</a>
          <a href="/timeline">Timeline</a>
          <a href="/sitemap">Sitemap</a>
          <a href="/rss.xml">RSS Feed</a>
        </div>
      </div>

      <!-- Column 4: Engage -->
      <div class="footer-col links-col">
        <div class="nav-group">
          <span class="nav-header">Engage</span>
          <a href="/blog">Blog</a>
          <a href="/services">Services</a>
          <a href="/workshops">Workshops</a>
          <a href="/testimonials">Testimonials</a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <div class="copyright">
        &copy; {year} Abodid. All rights reserved.
      </div>
      <div class="legal-links">
        <a href="/privacy">Privacy Policy</a>
        <span class="separator">â€¢</span>
        <a href="/licensing">Licensing</a>
      </div>
    </div>
  </div>
</footer>

<style>
  :root {
    --sci-fi-cyan: #00f3ff;
    --sci-fi-bg: rgba(5, 10, 15, 0.98);
    --footer-text-header: rgba(255, 255, 255, 0.9);
    --footer-text-dim: rgba(255, 255, 255, 0.4);
    --footer-border: rgba(0, 243, 255, 0.2);
  }

  :global([data-theme="light"]) {
    --sci-fi-cyan: #d6b400; /* Gold/Amber for paper theme */
    --sci-fi-bg: var(--bg-surface);
    --footer-text-header: var(--text-primary);
    --footer-text-dim: var(--text-tertiary);
    --footer-border: var(--border-subtle);
  }

  .site-footer {
    background-color: var(--sci-fi-bg);
    transition: background-color 0.3s ease;
    padding: 4rem 0 2rem;
    margin-top: auto;
    font-family: "Inconsolata", monospace;
    position: relative;
    z-index: 10;
    border-top: 1px solid var(--footer-border);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 4rem;
  }

  /* Column Styles */
  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 3rem; /* Increased vertical gap for distinct groups */
  }

  /* Brand */
  .footer-logo {
    display: inline-block;
    margin-bottom: 1rem;
  }

  .logo-img {
    height: 140px; /* Increased size */
    width: auto;
    display: block;
  }

  /* Default (Dark Mode Base) */
  .logo-black {
    display: none;
  }
  .logo-white {
    display: block;
  }
  /* Light Mode Override */
  :global([data-theme="light"]) .logo-black {
    display: block;
  }
  :global([data-theme="light"]) .logo-white {
    display: none;
  }

  .tagline {
    color: var(--text-secondary);
    max-width: 80%;
    line-height: 1.5;
    font-size: 1.2rem;
    margin: 0;
    opacity: 0.8;
  }

  .social-wrapper {
    margin-top: 0;
  }

  /* Newsletter */
  .section-title {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: 700;
    color: var(--sci-fi-cyan);
    margin-bottom: 1rem;
  }

  /* Navigation Groups */
  .nav-group {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .nav-header {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--footer-text-header);
    font-weight: 700;
    margin-bottom: 1rem;
    display: block;
    transition: color 0.3s ease;
  }

  .nav-group a {
    color: var(--text-secondary);
    font-size: 0.9rem;
    text-decoration: none;
    position: relative;
    width: fit-content;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-group a:hover {
    color: var(--text-primary);
    transform: translateX(4px);
  }

  /* Bottom Bar */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle);
    font-size: 0.75rem;
    color: var(--footer-text-dim);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: color 0.3s ease;
  }

  .legal-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .legal-links a:hover {
    color: var(--sci-fi-cyan);
  }

  .separator {
    color: var(--sci-fi-cyan);
    opacity: 0.5;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 600px) {
    .site-footer {
      padding: 3rem 0 2rem;
    }
    .footer-grid {
      display: flex;
      flex-direction: column;
      gap: 3rem;
    }
    .footer-bottom {
      flex-direction: column-reverse;
      gap: 1.5rem;
      align-items: flex-start;
    }
  }
</style>
