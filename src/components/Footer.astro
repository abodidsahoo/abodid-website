---
import Newsletter from "./Newsletter.astro";
import BrandFilmStrip from "./BrandFilmStrip.jsx";

const year = new Date().getFullYear();
---

<footer class="site-footer">
  <section class="brands-zone">
    <div class="brands-zone-strip">
      <BrandFilmStrip client:only="react" />
    </div>
  </section>

  <!-- Main Content Grid -->
  <div class="footer-main-content">
    <div class="footer-grid">
      <!-- Left Main Column: The Signal (Brand & Newsletter) -->
      <div class="footer-col signal">
        <div class="newsletter-section" id="newsletter">
          <p class="section-title">Subscribe</p>
          <Newsletter />
          <p class="newsletter-desc-text">
            Subscribe to my newsletter to receive a curated list of useful and
            interesting readings and resources I come across every week.
          </p>
        </div>
      </div>

      <!-- Right Main Column: Links Sub-Grid -->
      <div class="links-grid-container">
        <!-- Column 1: Dominant (Main Menu) -->
        <div class="footer-col links-col">
          <div class="nav-group">
            <span class="nav-header">Work</span>
            <a href="/research">Research</a>
            <a href="/photography">Photography</a>
            <a href="/films">Filmmaking</a>
            <a href="/blog">Writing</a>
          </div>
        </div>

        <!-- Column 2: Resources -->
        <div class="footer-col links-col">
          <div class="nav-group">
            <span class="nav-header">Resources</span>
            <a href="/resources">Curated Resources</a>
            <a href="/bsa-schedule">BSA Conference</a>
            <a href="/research/obsidian-vault">Obsidian Vault</a>
            <a href="/research/second-brain">Second Brain Club</a>
            <a href="/moodboard">Visual Moodboard</a>
          </div>
        </div>

        <!-- Column 3: Work With Me -->
        <div class="footer-col links-col">
          <div class="nav-group">
            <span class="nav-header">Work With Me</span>
            <a href="/services">Services</a>
            <a href="/workshops">Workshops</a>
            <a href="/fundraising">Fundraising</a>
          </div>
        </div>

        <!-- Column 4: Credentials -->
        <div class="footer-col links-col">
          <div class="nav-group">
            <span class="nav-header">Credentials</span>
            <a href="/about">About</a>
            <a href="/awards">Awards</a>
            <a href="/press">Press Mentions</a>
            <a href="/experience">Experience</a>
            <a
              href="https://jwipqbjxpmgyevfzpjjx.supabase.co/storage/v1/object/public/misc/cv/Abodid%20Sahoo%20-%20Photography%20&%20AI%20-%20CV.pdf"
              target="_blank"
              rel="noopener noreferrer">Resume</a
            >
          </div>
        </div>

        <!-- Column 5: Socials -->
        <div class="footer-col links-col">
          <div class="nav-group">
            <span class="nav-header">Social</span>
            <a href="https://www.instagram.com/abodid.sahoo" target="_blank"
              >Instagram</a
            >
            <a href="https://uk.linkedin.com/in/abodidsahoo" target="_blank"
              >LinkedIn</a
            >
            <a href="https://vimeo.com/abodidsahoo" target="_blank">Vimeo</a>
            <a href="https://github.com/abodidsahoo" target="_blank">GitHub</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-line main-content-bottom-line"></div>

  <!-- Bottom Bar (Full Width content) -->
  <div class="footer-bottom-full">
    <div class="copyright">
      &copy; {year} Abodid Sahoo. All rights reserved.
    </div>
    <div class="legal-links">
      <a href="/privacy">Privacy Policy</a>
      <span class="separator">•</span>
      <a href="/sitemap">Sitemap</a>
      <span class="separator">•</span>
      <a href="/architecture">Website Architecture</a>
    </div>
  </div>
</footer>

<style>
  :root {
    --sci-fi-cyan: var(--accent-primary);
    --footer-bg: var(--color-brand-red);
    --footer-text-header: #ffffff;
    --footer-text-dim: rgba(255, 255, 255, 0.84);
    --footer-border: rgba(255, 255, 255, 0.28);
  }

  .site-footer {
    background-color: var(--footer-bg) !important;
    color: var(--footer-text-header);
    padding: 0;
    margin-top: auto;
    font-family: var(--font-mono);
    position: relative;
    z-index: 10;
    width: 100%;
    /* Ensure no overflow issues */
    box-sizing: border-box;
    background-clip: padding-box;
    isolation: isolate;
  }

  .site-footer > * {
    position: relative;
    z-index: 1;
  }

  .brands-zone {
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(180deg, #050505 0%, #060606 62%, #0a0a0a 100%);
    padding: 0;
  }

  .brands-zone-strip {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: stretch;
    border-top: 1px solid rgba(255, 255, 255, 0.55);
    border-bottom: 1px solid rgba(255, 255, 255, 0.55);
    padding: clamp(0.75rem, 2vh, 1.15rem) 0;
  }

  .brands-zone-strip :global(.brand-filmstrip-wrapper) {
    width: 100%;
  }

  /* Full Width Separator Lines */
  .footer-line {
    width: 100%;
    height: 1px;
    background-color: var(--footer-border);
    display: block;
  }

  .footer-main-content {
    /* Increased horizontal padding for "decent spacing on the left/right" */
    padding: 6rem 8% 5rem;
    width: 100%;
    box-sizing: border-box;
  }

  /* Main Grid: 2 Large Columns (Brand Area vs Links Area) */
  .footer-grid {
    display: grid;
    /* Brand area gets breathing room (e.g., 35% or fixed), Links area takes rest */
    grid-template-columns: 350px 1fr;
    gap: 8vw; /* Large gap to separate Logo from Links */
    width: 100%;
  }

  /* Left Column: Brand & Newsletter */
  .signal {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    /* No extra padding needed, layout handles spacing */
  }

  /* Right Column: Links Sub-Grid */
  .links-grid-container {
    display: grid;
    /* 5 Columns for the links: Work, Recog, Lab, Engage, Socials */
    grid-template-columns: repeat(5, 1fr);
    gap: 1rem; /* "Compact" spacing between menu blocks */
  }

  /* Bottom Bar Full Width */
  .footer-bottom-full {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    /* Match the main content padding horizontally */
    padding: 2rem 8%;
    font-size: 0.75rem;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: color 0.3s ease;
    background: var(--color-brand-red);
    box-sizing: border-box;
  }

  /* Column Styles */
  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    /* Ensure content doesn't overflow if compact */
    min-width: 0;
  }

  /* Brand */
  .footer-logo {
    display: inline-block;
    margin-bottom: 0;
    /* Shift logo a bit upwards and to the left */
    margin-top: -10px;
    margin-left: -10px;
  }

  .logo-img {
    height: 80px; /* Much smaller */
    width: auto;
    display: block;
    opacity: 0.6; /* Slightly muted */
  }

  .logo-black {
    display: none !important;
  }
  .logo-white {
    display: block !important;
  }

  /* Newsletter */
  .newsletter-section {
    display: flex;
    flex-direction: column;
  }

  .section-title {
    font-size: 1rem; /* Matched to .nav-header */
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 700;
    color: var(--footer-text-header);
    margin: 0 0 0.5rem;
    padding-bottom: 0.2rem;
  }

  .newsletter-desc-text {
    font-size: 0.98rem;
    color: var(--footer-text-dim);
    margin-top: 1.1rem;
    line-height: 1.5;
    max-width: 320px;
  }

  /* Navigation Groups */
  .nav-group {
    display: flex;
    flex-direction: column;
    gap: 0.6rem; /* Slightly tighter link spacing */
  }

  .nav-header {
    font-size: 1rem; /* Slightly smaller header for compactness */
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--footer-text-header);
    font-weight: 700;
    margin-bottom: 1rem;
    display: block;
    transition: color 0.3s ease;
    white-space: nowrap; /* Prevent headers breaking */
  }

  .nav-group a {
    color: var(--footer-text-dim);
    font-size: 0.85rem; /* Slightly smaller font */
    text-decoration: none;
    position: relative;
    width: fit-content;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
  }

  .nav-group a:hover {
    color: var(--footer-text-header);
    transform: translateX(4px);
  }

  .legal-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .footer-bottom-full .legal-links a {
    color: #ffffff;
  }

  .footer-bottom-full .legal-links a:visited {
    color: #ffffff;
  }

  .legal-links a:hover {
    color: #ffffff;
    opacity: 0.85;
  }

  .separator {
    color: #ffffff;
    opacity: 0.75;
  }

  /* Responsive */
  @media (max-width: 1400px) {
    .footer-grid {
      grid-template-columns: 300px 1fr;
      gap: 4vw;
    }
    .links-grid-container {
      gap: 1.5rem;
    }
  }

  @media (max-width: 1100px) {
    .brands-zone {
      padding: 0;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
    }
    .links-grid-container {
      grid-template-columns: 1fr 1fr 1fr;
      row-gap: 3rem;
    }
    .footer-main-content {
      padding: 6rem 5% 5rem;
    }
  }

  @media (max-width: 600px) {
    .brands-zone {
      padding: 0;
    }

    .brands-zone-strip {
      padding: 0.65rem 0;
    }

    .footer-main-content {
      padding: 4rem 1rem 3rem;
    }
    .links-grid-container {
      display: flex;
      flex-direction: column;
      gap: 3rem;
    }

    .footer-bottom-full {
      flex-direction: column-reverse;
      gap: 1.5rem;
      align-items: flex-start;
      padding: 2rem 1rem;
    }

    .footer-line.top-line {
      /* Keep it */
    }
  }
  /* LIGHT MODE SPECIFIC ADJUSTMENTS */
  :global([data-theme="light"]) .brands-zone,
  :global([data-theme="light"]) .site-footer,
  :global([data-theme="light"]) .footer-bottom-full {
    color: #ffffff;
  }

  :global([data-theme="light"]) .site-footer {
    background: var(--color-brand-red) !important;
  }

  :global([data-theme="light"]) .footer-bottom-full {
    background: var(--color-brand-red);
  }

  :global([data-theme="light"]) .logo-img {
    filter: invert(1) !important;
    opacity: 1 !important;
  }
</style>
